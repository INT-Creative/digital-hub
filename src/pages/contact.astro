---
import BaseLayout from '../layouts/BaseLayout.astro';
import SocialIcons from '../components/social/SocialIcons.astro';
// import SocialProof from '../components/social/SocialProof.astro';
import { SOCIAL_CONFIG } from '../config/social.ts';
---

<BaseLayout 
  title="Get Started | INT Creative" 
  description="Transform your Northeast Ohio service business in 14 days or less. Founding client spots available with 20% off. Direct access to Jake, no account managers."
>
  <!-- Hero Section -->
  <section class="pt-20 pb-16 bg-gradient-to-br from-forest-900 to-sage-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-6">
          Transform Your Service Business in 
          <span class="text-sage-400">14 Days or Less</span>
        </h1>
        <p class="text-xl text-beige-100 mb-4">
          New consultancy. Proven methods. Founding client spots available.
        </p>
        <p class="text-lg text-beige-200 mb-8 max-w-3xl mx-auto">
          I'm Jake from INT Creative. I'm building a different kind of digital consultancy for Northeast Ohio service businesses. No bloated agency fees. No junior account managers. Just direct access to someone who understands both technology and local service businesses.
        </p>
        <div class="flex justify-center space-x-8 text-center">
          <div>
            <div class="text-2xl font-bold text-sage-400">7-14</div>
            <div class="text-beige-200 text-sm">Day Delivery</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-sage-400">Fixed</div>
            <div class="text-beige-200 text-sm">Pricing</div>
          </div>
          <div>
            <div class="text-2xl font-bold text-sage-400">Direct</div>
            <div class="text-beige-200 text-sm">Communication</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-3xl font-heading font-bold text-forest-900 mb-6">
            Claim Your Founding Client Spot
          </h2>
          <p class="text-gray-600 mb-8">
            Tell me about your service business and I'll create a custom transformation plan during our consultation. No sales pitch - just practical insights you can use to grow your business.
          </p>
          
          <form id="contact-form" class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">First Name *</label>
                <input 
                  type="text" 
                  id="firstName" 
                  name="firstName" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sage-500 focus:border-transparent"
                  placeholder="John"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">Last Name *</label>
                <input 
                  type="text" 
                  id="lastName" 
                  name="lastName" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sage-500 focus:border-transparent"
                  placeholder="Smith"
                />
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sage-500 focus:border-transparent"
                placeholder="john@abcplumbing.com"
              />
            </div>
            
            <div>
              <label for="company" class="block text-sm font-medium text-gray-700 mb-2">Business Name *</label>
              <input 
                type="text" 
                id="company" 
                name="company" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sage-500 focus:border-transparent"
                placeholder="ABC Plumbing, Smith Dental, etc."
              />
            </div>
            
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="businessType" class="block text-sm font-medium text-gray-700 mb-2">Business Type *</label>
                <select 
                  id="businessType" 
                  name="businessType" 
                  required
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sage-500 focus:border-transparent"
                >
                  <option value="">Select your industry</option>
                  <option value="hvac">HVAC</option>
                  <option value="plumbing">Plumbing</option>
                  <option value="electrical">Electrical</option>
                  <option value="dental">Dental Practice</option>
                  <option value="legal">Legal/Law Firm</option>
                  <option value="real-estate">Real Estate</option>
                  <option value="restaurant">Restaurant/Bar</option>
                  <option value="salon">Salon/Spa</option>
                  <option value="landscaping">Landscaping</option>
                  <option value="other">Other Service Business</option>
                </select>
              </div>
              <div>
                <label for="projectBudget" class="block text-sm font-medium text-gray-700 mb-2">Project Budget</label>
                <select 
                  id="projectBudget" 
                  name="projectBudget"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sage-500 focus:border-transparent"
                >
                  <option value="">Select budget range</option>
                  <option value="under-2k">Under $2K</option>
                  <option value="2k-5k">$2K - $5K</option>
                  <option value="5k-10k">$5K - $10K</option>
                  <option value="10k-plus">$10K+</option>
                  <option value="unsure">Not sure yet</option>
                </select>
              </div>
            </div>
            
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="timeline" class="block text-sm font-medium text-gray-700 mb-2">When do you want to start?</label>
                <select 
                  id="timeline" 
                  name="timeline"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sage-500 focus:border-transparent"
                >
                  <option value="">Select timeline</option>
                  <option value="asap">Need help ASAP</option>
                  <option value="1-3-months">Next 1-3 months</option>
                  <option value="planning">Just exploring options</option>
                  <option value="unsure">Not sure yet</option>
                </select>
              </div>
              <div>
                <label for="interests" class="block text-sm font-medium text-gray-700 mb-2">I'm interested in:</label>
                <select 
                  id="interests" 
                  name="interests"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sage-500 focus:border-transparent"
                >
                  <option value="">Select option</option>
                  <option value="founding-client">Founding client program (20% discount)</option>
                  <option value="standard-services">Standard services</option>
                  <option value="free-audit">Free website audit first</option>
                  <option value="consultation-only">Just a consultation</option>
                </select>
              </div>
            </div>
            
            <div>
              <label for="challenges" class="block text-sm font-medium text-gray-700 mb-2">What's your biggest challenge right now? *</label>
              <textarea 
                id="challenges" 
                name="challenges" 
                rows="4" 
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-sage-500 focus:border-transparent"
                placeholder="e.g., Outdated website, need more leads, competitors outranking us, no online presence, etc."
              ></textarea>
            </div>
            
            <div>
              <label for="services" class="block text-sm font-medium text-gray-700 mb-2">Services Interested In</label>
              <div class="grid md:grid-cols-2 gap-3 mt-2">
                <label class="flex items-center">
                  <input type="checkbox" name="services" value="website-development" class="rounded text-sage-600 focus:ring-sage-500"/>
                  <span class="ml-2 text-sm text-gray-700">Website Development ($2,500-$7,500)</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="services" value="digital-marketing" class="rounded text-sage-600 focus:ring-sage-500"/>
                  <span class="ml-2 text-sm text-gray-700">Digital Marketing ($2,000-$5,000)</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="services" value="graphic-design" class="rounded text-sage-600 focus:ring-sage-500"/>
                  <span class="ml-2 text-sm text-gray-700">Graphic Design ($1,200-$3,500)</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="services" value="marketing-automation" class="rounded text-sage-600 focus:ring-sage-500"/>
                  <span class="ml-2 text-sm text-gray-700">Marketing Automation ($1,500-$4,000)</span>
                </label>
                <label class="flex items-center">
                  <input type="checkbox" name="services" value="free-audit" class="rounded text-sage-600 focus:ring-sage-500"/>
                  <span class="ml-2 text-sm text-gray-700">Free Website Audit (First 10 businesses)</span>
                </label>
              </div>
            </div>
            
            <div class="space-y-3">
              <label class="flex items-start">
                <input type="checkbox" name="newsletter" value="yes" class="mt-1 rounded text-sage-600 focus:ring-sage-500"/>
                <span class="ml-3 text-sm text-gray-600">
                  Yes, I'd like to receive local business marketing insights and practical tips via email. (You can unsubscribe anytime)
                </span>
              </label>
              
              <label class="flex items-start">
                <input type="checkbox" name="socialFollow" value="yes" class="mt-1 rounded text-sage-600 focus:ring-sage-500"/>
                <span class="ml-3 text-sm text-gray-600">
                  I'd also like to follow Jake on 
                  <a href={SOCIAL_CONFIG.urls.linkedin} target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-700 font-medium transition-colors duration-200">LinkedIn</a> and
                  <a href={SOCIAL_CONFIG.urls.twitter} target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:text-blue-600 font-medium transition-colors duration-200">Twitter</a> for local business tips
                </span>
              </label>
            </div>
            
            <button 
              type="submit" 
              class="w-full bg-sage-600 hover:bg-sage-700 text-white py-4 px-6 rounded-lg font-medium text-lg transition-colors duration-200 shadow-lg"
            >
              Claim My Founding Client Spot
            </button>
            
            <p class="text-sm text-gray-500 text-center">
              We respect your privacy and will never share your information. See our <a href="/privacy" class="text-sage-600 hover:text-sage-700">Privacy Policy</a>.
            </p>
          </form>
        </div>
        
        <!-- Benefits & Info -->
        <div class="lg:pl-8">
          <!-- Founding Client Program -->
          <div class="bg-sage-50 p-8 rounded-2xl mb-8 border-2 border-sage-200">
            <h3 class="text-2xl font-heading font-bold text-forest-900 mb-4">
              Founding Client Program
            </h3>
            <p class="text-gray-700 mb-6 text-sm">
              As a new consultancy, I'm looking for 5 founding clients who want exceptional service at beta pricing. You'll get:
            </p>
            <div class="space-y-3">
              <div class="flex items-center">
                <div class="w-5 h-5 bg-sage-600 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-sm text-gray-700"><strong>20% off all services</strong></span>
              </div>
              <div class="flex items-center">
                <div class="w-5 h-5 bg-sage-600 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-sm text-gray-700">Direct input on service development</span>
              </div>
              <div class="flex items-center">
                <div class="w-5 h-5 bg-sage-600 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-sm text-gray-700">Weekly progress updates</span>
              </div>
              <div class="flex items-center">
                <div class="w-5 h-5 bg-sage-600 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-sm text-gray-700">First priority on all work</span>
              </div>
              <div class="flex items-center">
                <div class="w-5 h-5 bg-sage-600 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <span class="text-sm text-gray-700">Lifetime access to preferred pricing</span>
              </div>
            </div>
          </div>
          
          <!-- How I Work -->
          <div class="bg-beige-50 p-8 rounded-2xl mb-8">
            <h3 class="text-2xl font-heading font-bold text-forest-900 mb-6">
              How I Work
            </h3>
            <div class="space-y-4">
              <div class="flex items-start">
                <div class="w-6 h-6 bg-sage-600 rounded-full flex items-center justify-center mt-1 mr-4 flex-shrink-0">
                  <span class="text-white text-xs font-bold">1</span>
                </div>
                <div>
                  <h4 class="font-semibold text-forest-900 mb-1">Discovery</h4>
                  <p class="text-gray-600 text-sm">I start with understanding your business, not pushing packages. Every project begins with your goals.</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="w-6 h-6 bg-sage-600 rounded-full flex items-center justify-center mt-1 mr-4 flex-shrink-0">
                  <span class="text-white text-xs font-bold">2</span>
                </div>
                <div>
                  <h4 class="font-semibold text-forest-900 mb-1">Design</h4>
                  <p class="text-gray-600 text-sm">Modern, fast websites that actually convert visitors to customers. No fluff, just results.</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="w-6 h-6 bg-sage-600 rounded-full flex items-center justify-center mt-1 mr-4 flex-shrink-0">
                  <span class="text-white text-xs font-bold">3</span>
                </div>
                <div>
                  <h4 class="font-semibold text-forest-900 mb-1">Development</h4>
                  <p class="text-gray-600 text-sm">Built for speed, mobile-first, and easy for you to update. You own everything we create.</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="w-6 h-6 bg-sage-600 rounded-full flex items-center justify-center mt-1 mr-4 flex-shrink-0">
                  <span class="text-white text-xs font-bold">4</span>
                </div>
                <div>
                  <h4 class="font-semibold text-forest-900 mb-1">Delivery</h4>
                  <p class="text-gray-600 text-sm">14 days or less, with training so you're never stuck. Plus 30 days of support included.</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Contact Info -->
          <div class="space-y-6">
            <div>
              <h3 class="text-lg font-semibold text-forest-900 mb-3">Other Ways to Reach Me</h3>
              <div class="space-y-3">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-sage-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                  <span class="text-gray-700">jake@intcreative.co</span>
                </div>
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-sage-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                  </svg>
                  <span class="text-gray-700">(555) 123-4567</span>
                </div>
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-sage-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                  <span class="text-gray-700">Serving Cleveland, Akron, Canton and all of Northeast Ohio</span>
                </div>
              </div>
            </div>
            
            <!-- Enhanced Social Media Section -->
            <div>
              <h3 class="text-lg font-semibold text-forest-900 mb-3">Connect With Me</h3>
              <p class="text-gray-600 text-sm mb-4">
                {SOCIAL_CONFIG.cta.connect} for daily insights and behind-the-scenes content.
              </p>
              
              <!-- Primary Social Links -->
              <SocialIcons 
                size="md" 
                style="colored" 
                platforms={['linkedin', 'twitter', 'instagram', 'facebook']}
                showLabels={true}
                className="grid grid-cols-2 gap-3 mb-4"
              />
              
              <!-- Social Stats -->
              <div class="bg-sage-50 rounded-lg p-4 mt-4">
                <h4 class="font-medium text-forest-900 mb-2 text-sm">Join Our Community</h4>
                <div class="grid grid-cols-2 gap-3 text-xs text-gray-600">
                  <div class="flex items-center space-x-1">
                    <svg class="w-3 h-3 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                    <span>Connect</span>
                  </div>
                  <div class="flex items-center space-x-1">
                    <svg class="w-3 h-3 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                    <span>Follow</span>
                  </div>
                  <div class="flex items-center space-x-1">
                    <svg class="w-3 h-3 text-pink-500" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12.017 0C8.396 0 7.989.016 6.756.072 5.526.127 4.718.372 4.037.7c-.707.275-1.305.646-1.901 1.244-.596.598-.969 1.195-1.244 1.902C.372 4.718.127 5.526.072 6.756.016 7.989 0 8.396 0 12.017c0 3.624.016 4.031.072 5.264.055 1.23.3 2.038.628 2.719.275.707.646 1.305 1.244 1.901.598.596 1.195.969 1.902 1.244.681.328 1.489.573 2.719.628 1.233.056 1.64.072 5.264.072 3.624 0 4.031-.016 5.264-.072 1.23-.055 2.038-.3 2.719-.628.707-.275 1.305-.646 1.901-1.244.596-.598.969-1.195 1.244-1.902.328-.681.573-1.489.628-2.719.056-1.233.072-1.64.072-5.264 0-3.624-.016-4.031-.072-5.264-.055-1.23-.3-2.038-.628-2.719-.275-.707-.646-1.305-1.244-1.901C19.06.646 18.463.275 17.756 0 17.075-.328 16.267-.573 15.037-.628 13.804-.684 13.397-.7 9.773-.7s-4.031.016-5.264.072zm-.117 21.674c-3.365 0-3.739-.015-5.048-.069-1.206-.054-1.86-.259-2.294-.429-.576-.224-.987-.49-1.42-.923-.432-.433-.7-.844-.923-1.42-.17-.434-.375-1.088-.429-2.294-.054-1.309-.069-1.683-.069-5.048s.015-3.739.069-5.048c.054-1.206.259-1.86.429-2.294.224-.576.49-.987.923-1.42.433-.432.844-.7 1.42-.923.434-.17 1.088-.375 2.294-.429C8.375.085 8.749.07 12.114.07s3.739.015 5.048.069c1.206.054 1.86.259 2.294.429.576.224.987.49 1.42.923.432.433.7.844.923 1.42.17.434.375 1.088.429 2.294.054 1.309.069 1.683.069 5.048s-.015 3.739-.069 5.048c-.054 1.206-.259 1.86-.429 2.294-.224.576-.49.987-.923 1.42-.433.432-.844.7-1.42.923-.434.17-1.088.375-2.294.429-1.309.054-1.683.069-5.048.069z"/>
                    </svg>
                    <span>Connect</span>
                  </div>
