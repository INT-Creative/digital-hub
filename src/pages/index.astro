---
import BaseLayout from '../layouts/BaseLayout.astro';
import SocialProof from '../components/SocialProof.astro';
import SocialIcons from '../components/SocialIcons.astro';
import { SOCIAL_CONFIG } from '../config/social.ts';
---

<BaseLayout 
  title="Home" 
  description="INT Creative Hub - Professional marketing agency specializing in startup lead generation, brand development, and growth strategies. Scale your startup from idea to market leader."
>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-forest-900 via-forest-800 to-sage-800 text-white overflow-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32 relative">
        <div class="text-center max-w-4xl mx-auto">
          <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6 animate-fade-in">
            <span class="text-sage-400">Bridging Marketing Strategy</span>
            with Technical Implementation
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-beige-100 animate-slide-up">
            I provide comprehensive business solutions combining website development, automation, design, and digital marketing to help growing businesses succeed.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up mb-8">
            <a href="/contact" class="bg-sage-600 hover:bg-sage-700 text-white px-8 py-4 rounded-lg font-medium text-lg transition-colors duration-200 shadow-lg">
              Start Your Project
            </a>
            <a href="/portfolio" class="border-2 border-beige-50 text-beige-50 hover:bg-beige-50 hover:text-forest-900 px-8 py-4 rounded-lg font-medium text-lg transition-all duration-200">
              View Our Work
            </a>
          </div>
          
          <!-- Social Media Call-to-Action -->
          <div class="text-center animate-fade-in-delayed">
            <p class="text-beige-200 text-sm mb-4">
              Join 5K+ founders getting growth insights daily
            </p>
            <SocialIcons 
              size="md" 
              style="minimal" 
              platforms={['linkedin', 'twitter', 'instagram']}
              className="justify-center space-x-4"
              iconClassName="bg-beige-50/10 hover:bg-beige-50/20 border border-beige-50/20 hover:border-beige-50/40"
            />
          </div>
        </div>
      </div>
      
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent transform -skew-y-6"></div>
      </div>
    </section>

    <!-- Social Media Section -->
    <section class="py-16 bg-beige-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <!-- Social Media Stats -->
          <div class="max-w-2xl mx-auto">
            <SocialProof type="followers" showCounts={true} />
          </div>
        </div>
      </div>
    </section>

    <!-- Services Preview -->
    <section class="py-20 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-forest-900 mb-4">
            How I Help Businesses Grow
          </h2>
          <p class="text-xl text-gray-600 max-w-3xl mx-auto">
            Complete business solutions from strategy to execution - websites, automation, design, and marketing that work together seamlessly.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="bg-beige-50 p-8 rounded-xl shadow-sm hover:shadow-md transition-all duration-200 hover:-translate-y-1">
            <div class="w-12 h-12 bg-forest-100 text-forest-700 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            </div>
            <h3 class="text-xl font-heading font-semibold mb-4 text-forest-900">Website Development</h3>
            <p class="text-gray-600 mb-4">
              Modern, responsive websites that look professional and convert visitors into customers.
            </p>
            <a href="/services" class="text-sage-700 font-medium hover:text-sage-800">
              Learn more →
            </a>
          </div>
          
          <div class="bg-beige-50 p-8 rounded-xl shadow-sm hover:shadow-md transition-all duration-200 hover:-translate-y-1">
            <div class="w-12 h-12 bg-sage-100 text-sage-700 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-heading font-semibold mb-4 text-forest-900">Software Automation</h3>
            <p class="text-gray-600 mb-4">
              Custom applications and tools that streamline your business processes and save you time.
            </p>
            <a href="/services" class="text-sage-700 font-medium hover:text-sage-800">
              Learn more →
            </a>
          </div>
          
          <div class="bg-beige-50 p-8 rounded-xl shadow-sm hover:shadow-md transition-all duration-200 hover:-translate-y-1">
            <div class="w-12 h-12 bg-forest-200 text-forest-800 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-heading font-semibold mb-4 text-forest-900">Graphic Design</h3>
            <p class="text-gray-600 mb-4">
              Visual identity and marketing materials that make your business look professional and memorable.
            </p>
            <a href="/services" class="text-sage-700 font-medium hover:text-sage-800">
              Learn more →
            </a>
          </div>
          
          <div class="bg-beige-50 p-8 rounded-xl shadow-sm hover:shadow-md transition-all duration-200 hover:-translate-y-1">
            <div class="w-12 h-12 bg-sage-200 text-sage-800 rounded-lg flex items-center justify-center mb-6">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
              </svg>
            </div>
            <h3 class="text-xl font-heading font-semibold mb-4 text-forest-900">Digital Marketing</h3>
            <p class="text-gray-600 mb-4">
              Strategic online growth through targeted campaigns that bring you qualified leads and customers.
            </p>
            <a href="/services" class="text-sage-700 font-medium hover:text-sage-800">
              Learn more →
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="py-20 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-forest-900 mb-6">
              Why Choose INT Creative
            </h2>
            <div class="space-y-6">
              <div class="flex items-start">
                <div class="w-6 h-6 bg-sage-600 rounded-full flex items-center justify-center mt-1 mr-4 flex-shrink-0">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-forest-900 mb-2">Technical + Marketing Expertise</h3>
                  <p class="text-gray-600">I bridge both worlds - understanding marketing strategy AND having the technical skills to implement it.</p>
                </div>
              </div>
              <div class="flex items-start">
                <div class="w-6 h-6 bg-sage-600 rounded-full flex items-center justify-center mt-1 mr-4 flex-shrink-0">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-forest-900 mb-2">Data-Driven Results</h3>
                  <p class="text-gray-600">Every strategy is backed by real metrics and continuously optimized for maximum ROI.</p>
                </div>
              </div>
              <div class="flex items-start">
                <div class="w-6 h-6 bg-sage-600 rounded-full flex items-center justify-center mt-1 mr-4 flex-shrink-0">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-forest-900 mb-2">Custom Solutions</h3>
                  <p class="text-gray-600">Every project is tailored specifically to your business needs - no cookie-cutter approaches.</p>
                </div>
              </div>
              <div class="flex items-start">
                <div class="w-6 h-6 bg-sage-600 rounded-full flex items-center justify-center mt-1 mr-4 flex-shrink-0">
                  <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-forest-900 mb-2">Budget-Conscious Solutions</h3>
                  <p class="text-gray-600">Maximum impact with minimal spend - I know every dollar counts for growing businesses.</p>
                </div>
              </div>
            </div>
          </div>
          <div class="bg-gradient-to-br from-sage-100 to-beige-100 p-8 rounded-2xl">
            <div class="text-center">
              <h3 class="text-2xl font-heading font-bold text-forest-900 mb-6">My Process</h3>
              <div class="space-y-4">
                <div class="flex items-center justify-center space-x-3">
                  <div class="w-8 h-8 bg-sage-600 text-white rounded-full flex items-center justify-center text-sm font-bold">1</div>
                  <div class="text-left">
                    <div class="font-semibold text-forest-900">Discovery</div>
                    <div class="text-sm text-sage-700">Understanding your goals and challenges</div>
                  </div>
                </div>
                <div class="flex items-center justify-center space-x-3">
                  <div class="w-8 h-8 bg-sage-600 text-white rounded-full flex items-center justify-center text-sm font-bold">2</div>
                  <div class="text-left">
                    <div class="font-semibold text-forest-900">Strategy</div>
                    <div class="text-sm text-sage-700">Creating a custom solution plan</div>
                  </div>
                </div>
                <div class="flex items-center justify-center space-x-3">
                  <div class="w-8 h-8 bg-sage-600 text-white rounded-full flex items-center justify-center text-sm font-bold">3</div>
                  <div class="text-left">
                    <div class="font-semibold text-forest-900">Implementation</div>
                    <div class="text-sm text-sage-700">Building and executing the solution</div>
                  </div>
                </div>
                <div class="flex items-center justify-center space-x-3">
                  <div class="w-8 h-8 bg-sage-600 text-white rounded-full flex items-center justify-center text-sm font-bold">4</div>
                  <div class="text-left">
                    <div class="font-semibold text-forest-900">Optimization</div>
                    <div class="text-sm text-sage-700">Refining for maximum results</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    
    <!-- CTA Section -->
    <section class="py-20 bg-forest-900 text-white">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-6">
          Ready to Scale Your Startup?
        </h2>
        <p class="text-xl mb-8 text-beige-100">
          Get a free strategy call to discuss how we can accelerate your growth with proven marketing systems.
        </p>
        <div class="mb-8">
          <a href="/contact" class="bg-sage-600 hover:bg-sage-700 text-white px-8 py-4 rounded-lg font-medium text-lg transition-colors duration-200 inline-block shadow-lg">
            Start Your Project
          </a>
        </div>
        
        <!-- Social CTA -->
        <div class="border-t border-forest-800 pt-8">
          <p class="text-beige-200 text-sm mb-4">
            {SOCIAL_CONFIG.cta.follow} - connect with our community
          </p>
          <SocialIcons 
            size="md" 
            style="colored" 
            platforms={['linkedin', 'twitter', 'instagram', 'facebook']}
            className="justify-center space-x-4"
          />
        </div>
      </div>
    </section>
</BaseLayout>