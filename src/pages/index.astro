        setupEventListeners() {
          // Indicator clicks
          this.indicators.forEach((indicator) => {
            indicator.addEventListener('click', () => {
              const slideNumber = parseInt(indicator.getAttribute('data-slide'));
              console.log('Indicator clicked:', slideNumber);
              this.goToSlide(slideNumber);
            });
          });
          
          // Arrow clicks
          this.prevButton?.addEventListener('click', () => {
            this.previousSlide();
          });
          
          this.nextButton?.addEventListener('click', () => {
            this.nextSlide();
          });
          
          // Keyboard navigation
          document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') this.previousSlide();
            if (e.key === 'ArrowRight') this.nextSlide();
            if (e.key === ' ') {
              e.preventDefault();
              this.toggleAutoAdvance();
            }
          });
          
          // Pause on hover
          const heroSection = document.querySelector('#hero-slideshow').parentElement;
          heroSection.addEventListener('mouseenter', () => {
            this.pauseAutoAdvance();
          });
          
          heroSection.addEventListener('mouseleave', () => {
            this.resumeAutoAdvance();
          });
          
          // Touch support for mobile
          this.setupTouchEvents();
        }
        
        showArrowsOnHover() {
          const heroSection = document.querySelector('#hero-slideshow').parentElement;
          heroSection.addEventListener('mouseenter', () => {
            this.prevButton.style.opacity = '1';
            this.nextButton.style.opacity = '1';
          });
          
          heroSection.addEventListener('mouseleave', () => {
            this.prevButton.style.opacity = '0';
            this.nextButton.style.opacity = '0';
          });
        }
        
        setupTouchEvents() {
          let touchStartX = 0;
          let touchEndX = 0;
          
          const heroSection = document.querySelector('#hero-slideshow');
          
          heroSection.addEventListener('touchstart', (e) => {
            // Don't interfere with links, buttons, or interactive elements
            if (e.target.closest('a, button, [role="button"]')) {
              return;
            }
            touchStartX = e.changedTouches[0].screenX;
          });
          
          heroSection.addEventListener('touchend', (e) => {
            // Don't interfere with links, buttons, or interactive elements
            if (e.target.closest('a, button, [role="button"]')) {
              return;
            }
            touchEndX = e.changedTouches[0].screenX;
            this.handleSwipe(touchStartX, touchEndX);
          });
        }
        
        handleSwipe(startX, endX) {
          const swipeThreshold = 50;
          const diffX = startX - endX;
          
          if (Math.abs(diffX) > swipeThreshold) {
            if (diffX > 0) {
              this.nextSlide(); // Swipe left = next
            } else {
              this.previousSlide(); // Swipe right = previous
            }
          }
        }
        
        goToSlide(slideNumber) {
          console.log('goToSlide called with:', slideNumber);
          
          // Remove active class from current slide and indicator
          const currentSlide = document.querySelector('.slide.active');
          const currentIndicator = document.querySelector('.indicator.active');
          console.log('Current elements:', { currentSlide, currentIndicator });
          
          currentSlide?.classList.remove('active');
          currentIndicator?.classList.remove('active');
          
          // Add active class to new slide and indicator
          const newSlide = document.querySelector(`[data-slide="${slideNumber}"]`);
          const newIndicator = document.querySelector(`.indicator[data-slide="${slideNumber}"]`);
          console.log('New elements:', { newSlide, newIndicator });
          
          if (newSlide && newIndicator) {
            newSlide.classList.add('active');
            newIndicator.classList.add('active');
            this.currentSlide = slideNumber;
            console.log('Successfully switched to slide:', slideNumber);
          } else {
            console.error('Could not find slide or indicator for:', slideNumber);
          }
          
          this.restartAutoAdvance();
        }
        
        nextSlide() {
          const nextSlide = this.currentSlide >= this.totalSlides - 1 ? 0 : this.currentSlide + 1;
          this.goToSlide(nextSlide);
        }
        
        previousSlide() {
          const prevSlide = this.currentSlide <= 0 ? this.totalSlides - 1 : this.currentSlide - 1;
          this.goToSlide(prevSlide);
        }
        
        startAutoAdvance() {
          if (!this.isPlaying) return;
          
          this.autoAdvanceTimer = setInterval(() => {
            this.nextSlide();
          }, this.autoAdvanceInterval);
          
          // Restart progress bar animation
          if (this.progressBar) {
            this.progressBar.style.animation = 'none';
            this.progressBar.offsetHeight; // Trigger reflow
            this.progressBar.style.animation = `progressBar ${this.autoAdvanceInterval}ms linear infinite`;
          }
        }
        
        pauseAutoAdvance() {
          if (this.autoAdvanceTimer) {
            clearInterval(this.autoAdvanceTimer);
            this.autoAdvanceTimer = null;
          }
          
          if (this.progressBar) {
            this.progressBar.style.animationPlayState = 'paused';
          }
        }
        
        resumeAutoAdvance() {
          if (this.isPlaying && !this.autoAdvanceTimer) {
            this.startAutoAdvance();
          }
          
          if (this.progressBar) {
            this.progressBar.style.animationPlayState = 'running';
          }
        }
        
        restartAutoAdvance() {
          this.pauseAutoAdvance();
          this.startAutoAdvance();
        }
        
        toggleAutoAdvance() {
          this.isPlaying = !this.isPlaying;
          if (this.isPlaying) {
            this.resumeAutoAdvance();
          } else {
            this.pauseAutoAdvance();
          }
        }
      }
      
