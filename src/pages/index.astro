---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Home" 
  description="INT Creative Hub - Professional marketing agency specializing in startup lead generation, brand development, and growth strategies. Scale your startup from idea to market leader."
>
    <!-- Hero Slideshow Section -->
    <section class="relative bg-gradient-to-br from-forest-900 via-forest-800 to-sage-800 text-white overflow-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32 relative">
        <div class="text-center max-w-4xl mx-auto">
          
          <!-- Slideshow Container -->
          <div id="hero-slideshow" class="relative">
            <!-- Slide 0: Brand Intro -->
            <div class="slide active" data-slide="0">
              <div class="intro-slide-content relative">
                <!-- Logo Section -->
                <div class="logo-container mb-8 animate-fade-in" title="Click for a delightful surprise!" aria-label="Interactive INT Creative logo">
                  <div class="relative inline-flex items-center justify-center">
                    <!-- Brand Logo -->
                    <div class="logo-symbol w-16 h-16 md:w-20 md:h-20 relative mb-4">
                      <img src="/images/brand-logo.svg" alt="INT Creative Logo - interconnected nodes representing growth and systems" class="w-full h-full object-contain" />
                    </div>
                    <!-- Floating accent elements -->
                    <div class="absolute -top-2 -right-2 w-3 h-3 bg-sage-500 rounded-full animate-bounce-subtle" style="animation-delay: 0.5s;"></div>
                    <div class="absolute -bottom-1 -left-1 w-2 h-2 bg-beige-100 rounded-full animate-bounce-subtle" style="animation-delay: 1.2s;"></div>
                  </div>
                  
                  <!-- Company Name -->
                  <div class="brand-name text-center" title="Click to replay the letter animation!" aria-label="INT Creative company name with letter-by-letter animation">
                    <h1 class="text-2xl md:text-3xl font-heading font-bold text-beige-50 mb-2 tracking-wide">
                      <span class="letter">I</span><span class="letter">N</span><span class="letter">T</span><span class="letter"> </span><span class="letter">C</span><span class="letter">r</span><span class="letter">e</span><span class="letter">a</span><span class="letter">t</span><span class="letter">i</span><span class="letter">v</span><span class="letter">e</span>
                    </h1>
                  </div>
                </div>
                
                <!-- Tagline Section -->
                <div class="tagline-container mb-12">
                  <p class="tagline-primary text-xl md:text-2xl font-medium text-beige-100 mb-4 text-balance" title="Our core promise: streamlined systems that deliver measurable results">
                    <span class="word"><span class="power-word">Simple</span></span> <span class="word">Systems.</span> <span class="word"><span class="power-word">Measurable</span></span> <span class="word"><span class="power-word">Growth</span>.</span>
                  </p>
                  <p class="tagline-secondary text-lg md:text-xl text-beige-100/80 max-w-2xl mx-auto text-balance">
                    Your growth partner, not just your agency
                  </p>
                </div>
                
                <!-- Supporting Hero Graphics -->
                <div class="hero-graphics-container absolute inset-0 overflow-hidden pointer-events-none">
                  <!-- Geometric pattern overlay -->
                  <div class="geometric-pattern absolute inset-0 opacity-10">
                    <!-- Left side ascending dots -->
                    <div class="absolute left-8 top-1/2 transform -translate-y-1/2">
                      <div class="flex flex-col space-y-6">
                        <div class="w-2 h-2 bg-sage-400 rounded-full animate-bounce-subtle" style="animation-delay: 0.8s;"></div>
                        <div class="w-3 h-3 bg-sage-400 rounded-full animate-bounce-subtle" style="animation-delay: 1.1s;"></div>
                        <div class="w-4 h-4 bg-sage-400 rounded-full animate-bounce-subtle" style="animation-delay: 1.4s;"></div>
                        <div class="w-3 h-3 bg-sage-400 rounded-full animate-bounce-subtle" style="animation-delay: 1.7s;"></div>
                        <div class="w-2 h-2 bg-sage-400 rounded-full animate-bounce-subtle" style="animation-delay: 2.0s;"></div>
                      </div>
                    </div>
                    
                    <!-- Right side growth chart abstraction -->
                    <div class="absolute right-8 top-1/2 transform -translate-y-1/2 opacity-40 growth-chart-container" title="Click to see growth in action!" aria-label="Interactive growth chart showing upward business trajectory">
                      <img src="/images/growth-chart.svg" alt="Animated growth chart showing ascending business metrics and upward trend" class="w-15 h-20 object-contain growth-chart-bars" />
                    </div>
                  </div>
                  
                  <!-- Subtle network connections background -->
                  <div class="network-bg absolute inset-0 opacity-5">
                    <div class="w-full h-full" style="background-image: url('/images/network-pattern.svg'); background-repeat: repeat; background-size: 120px 120px; animation: backgroundDrift 30s linear infinite;"></div>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Slide 1: Web Development -->
            <div class="slide" data-slide="1">
              <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6 slide-title">
                Launch a website that turns visitors into leads
              </h1>
              <p class="text-xl md:text-2xl mb-8 text-beige-100 slide-subtitle">
                I build conversion-focused sites and set up the lead-capture automations you actually need. Clear scope. Fast turnaround.
              </p>
            </div>
            
            <!-- Slide 2: Digital Marketing -->
            <div class="slide" data-slide="2">
              <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6 slide-title">
                Launch campaigns that turn clicks into customers
              </h1>
              <p class="text-xl md:text-2xl mb-8 text-beige-100 slide-subtitle">
                Targeted ad campaigns that bring qualified leads, not just vanity metrics. Get properly tracked campaigns with optimized landing pages and clear ROI reporting so you know exactly what's working.
              </p>
            </div>
            
            <!-- Slide 3: Graphic Design -->
            <div class="slide" data-slide="3">
              <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6 slide-title">
                Create visuals that turn browsers into buyers
              </h1>
              <p class="text-xl md:text-2xl mb-8 text-beige-100 slide-subtitle">
                Professional brand visuals and marketing materials that make businesses look trustworthy and credible. Logos, social media graphics, and print materials that actually help close deals instead of just filling space.
              </p>
            </div>
            
            <!-- Slide 4: SaaS Software Automation -->
            <div class="slide" data-slide="4">
              <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6 slide-title">
                Build systems that turn tasks into time
              </h1>
              <p class="text-xl md:text-2xl mb-8 text-beige-100 slide-subtitle">
                Custom automation systems that eliminate repetitive tasks and streamline workflows. Automated lead nurturing, client onboarding sequences, and business processes that run themselves so you can focus on growth.
              </p>
            </div>
          </div>
          
          <!-- Slideshow Navigation -->
          <div class="slideshow-navigation relative z-10 mb-8">
            <!-- Navigation Dots -->
            <div class="slideshow-indicators flex justify-center space-x-3 mb-6">
              <button class="indicator active" data-slide="0" aria-label="Go to intro slide"></button>
              <button class="indicator" data-slide="1" aria-label="Go to slide 1"></button>
              <button class="indicator" data-slide="2" aria-label="Go to slide 2"></button>
              <button class="indicator" data-slide="3" aria-label="Go to slide 3"></button>
              <button class="indicator" data-slide="4" aria-label="Go to slide 4"></button>
            </div>
            
            <!-- Navigation Arrows -->
            <button class="slideshow-arrow slideshow-arrow-prev" aria-label="Previous slide">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
              </svg>
            </button>
            <button class="slideshow-arrow slideshow-arrow-next" aria-label="Next slide">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Hero CTA - Outside slideshow container to prevent click interference -->
        <div class="relative z-30 flex justify-center mt-8">
          <a href="/contact" class="bg-sage-600 hover:bg-sage-700 text-white px-8 py-4 rounded-lg font-medium text-lg transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 transform group" aria-label="Contact us to start your growth journey">
            <span class="group-hover:shimmer-effect">Ready to Become Your Industry's Main Character?</span>
          </a>
        </div>
      </div>
      
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent transform -skew-y-6"></div>
      </div>
      
      <!-- Progress Bar -->
      <div class="slideshow-progress"></div>
    </section>

    <!-- Your Business Transformation Section -->
    <section class="py-20 bg-beige-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-forest-900 mb-12 text-center transformation-section-title">
            How INT Creative Can Transform Your Business
          </h2>
          <div class="grid md:grid-cols-2 gap-8 lg:gap-12 transformation-grid">
            <!-- Website Development Transformation -->
            <div class="transformation-card bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-500 p-8 border border-gray-100 group cursor-pointer" data-service="website-development">
              <!-- Progress Bar for Transformation Journey -->
              <div class="transformation-progress mb-4">
                <div class="progress-track h-1 bg-gray-200 rounded-full overflow-hidden">
                  <div class="progress-fill h-full bg-gradient-to-r from-gray-400 to-sage-600 rounded-full transform -translate-x-full group-hover:translate-x-0 transition-transform duration-1000 ease-out"></div>
                </div>
                <div class="flex justify-between text-xs text-gray-500 mt-1">
                  <span class="before-state opacity-60 group-hover:opacity-30 transition-opacity duration-500">Before</span>
                  <span class="after-state opacity-30 group-hover:opacity-100 group-hover:text-sage-700 transition-all duration-500">After</span>
                </div>
              </div>
              
              <!-- Icon with transformation state -->
              <div class="transformation-icon-container relative mb-4">
                <div class="icon-background w-12 h-12 bg-gradient-to-br from-gray-400 to-gray-500 group-hover:from-forest-900 group-hover:to-sage-800 rounded-lg flex items-center justify-center transition-all duration-500 relative overflow-hidden">
                  <!-- Before State Icon (invisible/broken website) -->
                  <svg class="before-icon w-6 h-6 text-beige-50 absolute transition-all duration-500 group-hover:opacity-0 group-hover:scale-75" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" opacity="0.4"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" opacity="0.8"></path>
                  </svg>
                  <!-- After State Icon (polished website) -->
                  <svg class="after-icon w-6 h-6 text-beige-50 absolute opacity-0 scale-125 group-hover:opacity-100 group-hover:scale-100 transition-all duration-500 delay-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4"></path>
                  </svg>
                  <!-- Sparkle effects on hover -->
                  <div class="sparkle absolute top-1 right-1 w-2 h-2 bg-yellow-300 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-ping transition-opacity duration-300 delay-500"></div>
                  <div class="sparkle absolute bottom-1 left-1 w-1 h-1 bg-blue-300 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-ping transition-opacity duration-300 delay-700" style="animation-delay: 0.2s;"></div>
                </div>
                <!-- Floating transformation indicator -->
                <div class="transformation-indicator absolute -top-1 -right-1 w-4 h-4 bg-sage-500 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300 delay-300 animate-bounce-subtle">
                  <svg class="w-3 h-3 text-white absolute top-0.5 left-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>
              
              <h3 class="text-xl font-bold text-forest-900 mb-3 group-hover:text-transparent group-hover:bg-gradient-to-r group-hover:from-forest-900 group-hover:to-sage-700 group-hover:bg-clip-text transition-all duration-500">
                Website Development: From <span class="problem-state text-gray-500 group-hover:line-through transition-all duration-300">Invisible Online</span> to <span class="solution-state text-sage-700 font-extrabold group-hover:animate-pulse">Lead-Generating Machine</span>
              </h3>
              <p class="text-gray-600 leading-relaxed mb-4 group-hover:text-gray-700 transition-colors duration-300">
                Stop losing customers to competitors with professional websites. Get a conversion-focused site that captures leads 24/7 and builds instant credibility.
              </p>
              <div class="timeline-badge inline-flex items-center px-3 py-1 bg-sage-600/10 group-hover:bg-sage-600 group-hover:text-white text-sage-700 text-sm font-medium rounded-full transition-all duration-300 relative overflow-hidden mb-4">
                <span class="timeline-text transition-all duration-300">7-day turnaround</span>
                <div class="success-shimmer absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-700 delay-300"></div>
              </div>
              <a href="/services#website-development" class="inline-flex items-center px-4 py-2 bg-sage-600 hover:bg-sage-700 text-white rounded-lg font-medium text-sm transition-all duration-300 shadow-md hover:shadow-lg group/btn">
                <span>Learn More</span>
                <svg class="w-4 h-4 ml-2 group-hover/btn:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
              
              <!-- Celebration particles (hidden by default) -->
              <div class="celebration-particles absolute inset-0 pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div class="particle absolute top-4 left-4 w-1 h-1 bg-sage-400 rounded-full animate-ping" style="animation-delay: 0.1s;"></div>
                <div class="particle absolute top-6 right-6 w-1 h-1 bg-yellow-400 rounded-full animate-ping" style="animation-delay: 0.3s;"></div>
                <div class="particle absolute bottom-8 left-8 w-1 h-1 bg-blue-400 rounded-full animate-ping" style="animation-delay: 0.5s;"></div>
              </div>
            </div>

            <!-- Digital Marketing Transformation -->
            <div class="transformation-card bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-500 p-8 border border-gray-100 group cursor-pointer" data-service="digital-marketing">
              <!-- Progress Bar for Transformation Journey -->
              <div class="transformation-progress mb-4">
                <div class="progress-track h-1 bg-gray-200 rounded-full overflow-hidden">
                  <div class="progress-fill h-full bg-gradient-to-r from-gray-400 to-sage-600 rounded-full transform -translate-x-full group-hover:translate-x-0 transition-transform duration-1200 ease-out"></div>
                </div>
                <div class="flex justify-between text-xs text-gray-500 mt-1">
                  <span class="before-state opacity-60 group-hover:opacity-30 transition-opacity duration-500">Before</span>
                  <span class="after-state opacity-30 group-hover:opacity-100 group-hover:text-sage-700 transition-all duration-500">After</span>
                </div>
              </div>
              
              <!-- Icon with transformation state -->
              <div class="transformation-icon-container relative mb-4">
                <div class="icon-background w-12 h-12 bg-gradient-to-br from-gray-400 to-gray-500 group-hover:from-forest-900 group-hover:to-sage-800 rounded-lg flex items-center justify-center transition-all duration-500 relative overflow-hidden">
                  <!-- Before State Icon (scattered/declining chart) -->
                  <svg class="before-icon w-6 h-6 text-beige-50 absolute transition-all duration-500 group-hover:opacity-0 group-hover:scale-75" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" opacity="0.4"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6" opacity="0.6"></path>
                  </svg>
                  <!-- After State Icon (growing chart) -->
                  <svg class="after-icon w-6 h-6 text-beige-50 absolute opacity-0 scale-125 group-hover:opacity-100 group-hover:scale-100 transition-all duration-500 delay-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 14l3-3 3 3 5-5"></path>
                  </svg>
                  <!-- Sparkle effects on hover -->
                  <div class="sparkle absolute top-1 right-1 w-2 h-2 bg-green-300 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-ping transition-opacity duration-300 delay-500"></div>
                  <div class="sparkle absolute bottom-1 left-1 w-1 h-1 bg-purple-300 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-ping transition-opacity duration-300 delay-700" style="animation-delay: 0.2s;"></div>
                </div>
                <!-- Floating transformation indicator -->
                <div class="transformation-indicator absolute -top-1 -right-1 w-4 h-4 bg-sage-500 rounded-full opacity-0 group-hover:opacity-100 transition-all duration-300 delay-300 animate-bounce-subtle">
                  <svg class="w-3 h-3 text-white absolute top-0.5 left-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
              </div>
              
              <h3 class="text-xl font-bold text-forest-900 mb-3 group-hover:text-transparent group-hover:bg-gradient-to-r group-hover:from-forest-900 group-hover:to-sage-700 group-hover:bg-clip-text transition-all duration-500">
                Digital Marketing: From <span class="problem-state text-gray-500 group-hover:line-through transition-all duration-300">Scattered Marketing</span> to <span class="solution-state text-sage-700 font-extrabold group-hover:animate-pulse">Predictable Customer Growth</span>
              </h3>
              <p class="text-gray-600 leading-relaxed mb-4 group-hover:text-gray-700 transition-colors duration-300">
                End marketing guesswork forever. Get targeted campaigns with automated follow-up that delivers qualified leads at 40% lower cost per conversion.
              </p>
              <div class="timeline-badge inline-flex items-center px-3 py-1 bg-sage-600/10 group-hover:bg-sage-600 group-hover:text-white text-sage-700 text-sm font-medium rounded-full transition-all duration-300 relative overflow-hidden mb-4">
                <span class="timeline-text transition-all duration-300">6-day launch</span>
                <div class="success-shimmer absolute inset-0 bg-gradient-to-r from-transparent via-white/30 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-700 delay-300"></div>
              </div>
              <a href="/services#digital-marketing" class="inline-flex items-center px-4 py-2 bg-sage-600 hover:bg-sage-700 text-white rounded-lg font-medium text-sm transition-all duration-300 shadow-md hover:shadow-lg group/btn">
                <span>Learn More</span>
                <svg class="w-4 h-4 ml-2 group-hover/btn:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
              
              <!-- Celebration particles -->
              <div class="celebration-particles absolute inset-0 pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <div class="particle absolute top-4 left-4 w-1 h-1 bg-sage-400 rounded-full animate-ping" style="animation-delay: 0.1s;"></div>
                <div class="particle absolute top-6 right-6 w-1 h-1 bg-yellow-400 rounded-full animate-ping" style="animation-delay: 0.3s;"></div>
                <div class="particle absolute bottom-8 left-8 w-1 h-1 bg-blue-400 rounded-full animate-ping" style="animation-delay: 0.5s;"></div>
              </div>
            </div>

            <!-- Graphic Design Transformation -->
            <div class="transformation-card bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-500 p-8 border border-gray-100 group cursor-pointer" data-service="graphic-design">
              <!-- Progress Bar for Transformation Journey -->
              <div class="transformation-progress mb-4">
                <div class="progress-track h-1 bg-gray-200 rounded-full overflow-hidden">
                  <div class="progress-fill h-full bg-gradient-to-r from-gray-400 to-sage-600 rounded-full transform -translate-x-full group-hover:translate-x-0 transition-transform duration-1000 ease-out"></div>
                </div>
                <div class="flex justify-between text-xs text-gray-500 mt-1">
                  <span class="before-state opacity-60 group-hover:opacity-30 transition-opacity duration-500">Before</span>
                  <span class="after-state opacity-30 group-hover:opacity-100 group-hover:text-sage-700 transition-all duration-500">After</span>
                </div>
              </div>
              
              <!-- Icon with transformation state -->
              <div class="transformation-icon-container relative mb-4">
                <div class="icon-background w-12 h-12 bg-gradient-to-br from-gray-400 to-gray-500 group-hover:from-forest-900 group-hover:to-sage-800 rounded-lg flex items-center justify-center transition-all duration-500 relative overflow-hidden">
                  <!-- Before State Icon (amateur/broken design) -->
                  <svg class="before-icon w-6 h-6 text-beige-50 absolute transition-all duration-500 group-hover:opacity-0 group-hover:scale-75" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z" opacity="0.3"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" opacity="0.6"></path>
                  </svg>
                  <!-- After State Icon (professional design) -->
                  <svg class="after-icon w-6 h-6 text-beige-50 absolute opacity-0 scale-125 group-hover:opacity-100 group-hover:scale-100 transition-all duration-500 delay-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h6M5 12h6M17 8h.01M17 12h.01"></path>
                  </svg>
                  <!-- Sparkle effects on hover -->
                  <div class="sparkle absolute top-1 right-1 w-2 h-2 bg-pink-300 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-ping transition-opacity duration-300 delay-500"></div>
                  <div class="sparkle absolute bottom-1 left-1 w-1 h-1 bg-indigo-300 rounded-full opacity-0 group-hover:opacity-100 group-hover:animate-ping transition-opacity duration-300 delay-700" style="animation-delay: 0.2s;"></div>
