---
import BaseLayout from '../layouts/BaseLayout.astro';
import Breadcrumbs from '../components/common/Breadcrumbs.astro';
import PortfolioFilter from '../components/sections/portfolio/PortfolioFilter.astro';
import PortfolioGrid from '../components/sections/portfolio/PortfolioGrid.astro';
import { getPortfolioStats } from '../data/portfolio';

// Get filter from URL params with validation
const validFilters = ['all', 'website-development', 'digital-marketing', 'graphic-design', 'marketing-automation'];
const rawFilter = Astro.url.searchParams.get('filter') || 'all';
const currentFilter = validFilters.includes(rawFilter) ? rawFilter : 'all';

// Redirect invalid filters to avoid 404-like behavior
if (rawFilter && !validFilters.includes(rawFilter)) {
  return Astro.redirect('/portfolio');
}

// Portfolio statistics for meta information
const portfolioStats = getPortfolioStats();

// Enhanced Schema for Portfolio page with SEO optimization
const portfolioSchema = {
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  "name": "Portfolio - Service Business Transformation Projects | Northeast Ohio",
  "description": "Demonstration portfolio showcasing proven methodology for service business transformation in Northeast Ohio. Website development, digital marketing, and automation case studies with measurable results.",
  "url": "https://intcreative.co/portfolio",
  "inLanguage": "en-US",
  "keywords": [
    "service business transformation Northeast Ohio",
    "website development for service businesses",
    "digital marketing automation Ohio",
    "professional service business consulting",
    "local business website design",
    "Cleveland Akron business marketing"
  ],
  "audience": {
    "@type": "Audience",
    "audienceType": "Service Business Owners",
    "geographicArea": {
      "@type": "Place",
      "name": "Northeast Ohio",
      "containsPlace": ["Cleveland", "Akron", "Canton", "Youngstown", "Warren"]
    }
  },
  "publisher": {
    "@type": "LocalBusiness",
    "@id": "https://intcreative.co/#organization",
    "name": "INT Creative Hub",
    "alternateName": "INT Creative LLC",
    "url": "https://intcreative.co",
    "logo": "https://intcreative.co/images/logo-structured-data.png",
    "image": "https://intcreative.co/images/int-creative-office.jpg",
    "description": "Transformation consultant specializing in service business growth through website development, digital marketing, and automation.",
    "founder": {
      "@type": "Person",
      "name": "Jacob Internicola",
      "jobTitle": "Business Transformation Consultant"
    },
    "areaServed": {
      "@type": "State",
      "name": "Ohio",
      "containsPlace": [
        {"@type": "City", "name": "Cleveland"},
        {"@type": "City", "name": "Akron"},
        {"@type": "City", "name": "Canton"},
        {"@type": "City", "name": "Youngstown"}
      ]
    },
    "serviceArea": {
      "@type": "GeoCircle",
      "geoMidpoint": {
        "@type": "GeoCoordinates",
        "latitude": 41.4993,
        "longitude": -81.6944
      },
      "geoRadius": "100 miles"
    },
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "Service Business Transformation Services",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Website Development for Service Businesses",
            "description": "Custom websites with lead generation and booking systems"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Digital Marketing Automation",
            "description": "Lead generation and customer retention automation"
          }
        },
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Service",
            "name": "Professional Brand Design",
            "description": "Modern brand identity for service professionals"
          }
        }
      ]
    }
  },
  "mainEntity": {
    "@type": "ItemList",
    "name": "Service Business Transformation Portfolio",
    "description": "Demonstration projects showing transformation methodology for Northeast Ohio service businesses",
    "numberOfItems": portfolioStats.total,
    "itemListElement": Object.entries(portfolioStats.byCategory).map(([category, count], index) => ({
      "@type": "ListItem",
      "position": index + 1,
      "name": `${category} Transformation Projects`,
      "description": `${count} demonstration ${category.toLowerCase()} projects showing proven methodology for service business growth`,
      "url": `https://intcreative.co/portfolio?filter=${category.toLowerCase().replace(' ', '-')}`
    }))
  },
  "potentialAction": {
    "@type": "SearchAction",
    "target": "https://intcreative.co/portfolio?filter={search_term_string}",
    "query-input": "required name=search_term_string"
  },
  "about": {
    "@type": "Thing",
    "name": "Service Business Transformation",
    "description": "Proven methodology for transforming traditional service businesses through digital marketing, automation, and professional positioning"
  }
};

// Breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://intcreative.co"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Portfolio",
      "item": "https://intcreative.co/portfolio"
    }
  ]
};
---

<BaseLayout 
  title="Service Business Transformation Portfolio | Northeast Ohio Consulting | INT Creative"
  description="Proven methodology for service business transformation in Northeast Ohio. See demonstration projects showing website development, digital marketing automation, and professional branding results for local service businesses. Cleveland, Akron, Canton area specialist."
  image="/images/portfolio-og-image.jpg"
>
  <script type="application/ld+json" set:html={JSON.stringify(portfolioSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <!-- Breadcrumbs -->
  <Breadcrumbs 
    items={[
      { label: 'Home', href: '/' },
      { label: 'Portfolio', href: '/portfolio' }
    ]}
  />

  <!-- Hero Section -->
  <section class="pt-20 pb-16 bg-gradient-to-br from-forest-900 to-sage-800 text-white relative overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent transform -skew-y-3"></div>
    </div>
    
    <!-- Energy particles -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-1/4 left-8 w-1 h-1 bg-sage-400 rounded-full opacity-60 animate-pulse"></div>
      <div class="absolute top-1/2 right-12 w-0.5 h-0.5 bg-beige-200 rounded-full opacity-40 animate-pulse" style="animation-delay: 0.5s;"></div>
      <div class="absolute bottom-1/3 left-1/3 w-1 h-1 bg-sage-300 rounded-full opacity-50 animate-pulse" style="animation-delay: 1s;"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">
          Service Business Transformation Portfolio
        </h1>
        <p class="text-xl text-beige-100 mb-6">
          Proven methodology for Northeast Ohio service businesses
        </p>
        <p class="text-lg text-beige-100 mb-8 max-w-3xl mx-auto">
          These demonstration projects showcase my transformation methodology using realistic scenarios for Northeast Ohio service businesses. From website development to marketing automation, see exactly how I help professional services, healthcare, home services, and local businesses achieve measurable growth.
        </p>
        
        <!-- Portfolio stats -->
        <div class="flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-8 text-center">
          <div class="bg-white/10 backdrop-blur-sm rounded-lg px-6 py-3 border border-white/20">
            <div class="text-2xl font-bold text-white">{portfolioStats.total}</div>
            <div class="text-sm text-beige-200">Demo Projects</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg px-6 py-3 border border-white/20">
            <div class="text-2xl font-bold text-white">4</div>
            <div class="text-sm text-beige-200">Service Categories</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg px-6 py-3 border border-white/20">
            <div class="text-2xl font-bold text-white">100%</div>
            <div class="text-sm text-beige-200">Results-Focused</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Legal Disclaimer -->
  <section class="py-8 bg-amber-50 border-t border-b border-amber-200">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-lg p-6 border border-amber-300 shadow-sm">
        <div class="flex items-start">
          <div class="flex-shrink-0">
            <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-lg font-semibold text-amber-800 mb-2">Important Disclosure</h3>
            <div class="text-sm text-amber-700 space-y-2">
              <p><strong>These are demonstration projects created for portfolio purposes.</strong> All company names, client details, testimonials, and results are fictional and created to illustrate INT Creative's service methodology.</p>
              <p>While based on realistic industry scenarios and proven strategies, no actual client relationships are represented. All metrics and outcomes are hypothetical examples of potential results.</p>
              <p>INT Creative is currently in pre-launch phase. These conceptual case studies demonstrate our planned approach to service business transformation.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Portfolio Filter -->
  <PortfolioFilter currentFilter={currentFilter} showCount={true} />

  <!-- Portfolio Grid -->
  <PortfolioGrid filterCategory={currentFilter} />

  <!-- Results Promise Section -->
  <section class="py-16 bg-gradient-to-br from-sage-50 to-beige-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-heading font-bold text-forest-900 mb-6">
        Your Success Story Starts Here
      </h2>
      <p class="text-lg text-gray-700 mb-8">
        These demonstration projects show how we approach real business challenges. Each conceptual transformation illustrates proven strategies that can be adapted for your unique situation.
      </p>
      
      <!-- Promise points -->
      <div class="grid md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200 relative overflow-hidden group">
          <div class="absolute inset-0 bg-gradient-to-r from-sage-50/0 via-sage-100/30 to-sage-50/0 transform -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
          <div class="relative z-10">
            <div class="w-12 h-12 bg-sage-600 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-forest-900 mb-2">Proven Process</h3>
            <p class="text-sm text-gray-600">Every project follows battle-tested methods that consistently deliver results for service businesses.</p>
          </div>
        </div>
        
        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200 relative overflow-hidden group">
          <div class="absolute inset-0 bg-gradient-to-r from-sage-50/0 via-sage-100/30 to-sage-50/0 transform -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
          <div class="relative z-10">
            <div class="w-12 h-12 bg-sage-600 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-forest-900 mb-2">Measurable Results</h3>
            <p class="text-sm text-gray-600">Every project includes clear metrics and tracking so you know exactly what's working and what's not.</p>
          </div>
        </div>
        
        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200 relative overflow-hidden group">
          <div class="absolute inset-0 bg-gradient-to-r from-sage-50/0 via-sage-100/30 to-sage-50/0 transform -translate-x-full group-hover:translate-x-full transition-transform duration-700"></div>
          <div class="relative z-10">
            <div class="w-12 h-12 bg-sage-600 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-forest-900 mb-2">Fast Implementation</h3>
            <p class="text-sm text-gray-600">Most projects complete in 7-21 days because service businesses need results quickly, not endless development cycles.</p>
          </div>
        </div>
      </div>
      
      <!-- CTA -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact"
          class="bg-sage-600 hover:bg-sage-700 text-white px-8 py-3 rounded-lg font-medium transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 transform relative overflow-hidden group"
        >
          <span class="relative z-10">Discuss Your Project</span>
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-500"></div>
        </a>
        
        <a 
          href="/services"
          class="bg-forest-900 hover:bg-forest-800 text-white px-8 py-3 rounded-lg font-medium transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 transform relative overflow-hidden group"
        >
          <span class="relative z-10">Explore Services</span>
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-500"></div>
        </a>
      </div>
      
      <p class="text-sm text-gray-600 mt-6">
        Custom scope, fixed quote after a quick call. No surprises, just clear pricing for exactly what you need.
      </p>
    </div>
  </section>
</BaseLayout>