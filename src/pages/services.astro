---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServicesGrid from '../components/sections/services/ServicesGrid.astro';
import DetailSection from '../components/sections/services/DetailSection.astro';
import FAQSection from '../components/sections/services/FAQSection.astro';
import { servicesData } from '../data/services';

// Get services in the specific order
const serviceOrder = ['automation', 'website-design', 'graphic-design', 'social-media'];
const orderedServices = serviceOrder.map(slug => 
  servicesData.services.find(s => s.slug === slug)
).filter(Boolean);

// Generate JSON-LD FAQPage schema with 3 Q&As
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": [
    {
      "@type": "Question",
      "name": "What makes you different from other agencies?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "We focus on practical, measurable results for small businesses. No jargon, no fluff — just systems that work. We use proven tools like Webflow for websites, HubSpot Free for CRM, and Zapier for automation to keep costs low and results high."
      }
    },
    {
      "@type": "Question", 
      "name": "How quickly can we see results?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Websites go live in 7 days. Automation systems start working immediately. Ad campaigns can drive traffic within 48 hours. Most clients see meaningful improvements in lead flow within 30 days."
      }
    },
    {
      "@type": "Question",
      "name": "Do you work with businesses outside Northeast Ohio?",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "Yes! While we're based in Northeast Ohio (Cleveland • Akron • Canton), we work with clients nationwide. Local clients benefit from in-person strategy sessions, but all our services are delivered effectively remotely."
      }
    }
  ]
};
---

<BaseLayout 
  title="Services | INT Creative" 
  description="Professional web design, automation, graphic design, and social media services for businesses in Northeast Ohio and remote clients. Get custom solutions that drive real results."
>
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  
  <!-- Hero Section -->
  <section class="pt-20 pb-16 bg-gradient-to-br from-forest-900 to-sage-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-6">
          Services
        </h1>
        <p class="text-xl text-beige-100 mb-4">
          We help growing businesses build sustainable marketing systems that actually work. 
          From conversion-focused websites to automated follow-up engines, we deliver practical solutions that drive real results.
        </p>
        <p class="text-lg text-beige-200">
          {servicesData.location.headline} ({servicesData.location.cities.join(' • ')}), {servicesData.location.availability}.
        </p>
      </div>
    </div>
  </section>

  <!-- Services Grid -->
  <ServicesGrid />

  <!-- Service Detail Sections -->
  {orderedServices.map((service, index) => (
    <div class={index % 2 === 0 ? '' : 'bg-white'}>
      <DetailSection detail={service} />
    </div>
  ))}

  <!-- FAQ Section -->
  <FAQSection />

  <!-- Footer CTA -->
  <section class="py-20 bg-forest-900 text-white">
    <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-6">
        Ready to Grow Your Business?
      </h2>
      <p class="text-xl mb-8 text-beige-100">
        Let's discuss your goals and create a custom solution that fits your needs.
      </p>
      <a 
        href="/contact" 
        class="inline-block bg-sage-600 hover:bg-sage-700 text-white px-8 py-4 rounded-lg font-medium text-lg transition-colors duration-200 shadow-lg"
      >
        Book a 20-min discovery call
      </a>
      <p class="text-sm text-beige-200 mt-4">
        {servicesData.globalCTA.helper}
      </p>
    </div>
  </section>
</BaseLayout>