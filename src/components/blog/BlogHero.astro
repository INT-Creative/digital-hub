---
export interface Props {
  title?: string;
  description?: string;
  showFeaturedPost?: boolean;
  featuredPost?: any;
}

const { 
  title = "Transformation Insights", 
  description = "Practical strategies, case studies, and actionable advice to help your business thrive in today's competitive landscape.",
  showFeaturedPost = true,
  featuredPost
} = Astro.props;

// Sample featured post if none provided
const defaultFeaturedPost = {
  title: "The Complete Guide to Local Business Digital Transformation",
  description: "A comprehensive roadmap for service businesses looking to modernize their operations, attract more customers, and increase revenue through strategic digital initiatives.",
  slug: "local-business-digital-transformation-guide",
  publishDate: "2024-01-20",
  author: "Jacob Internicola",
  category: "Strategy",
  tags: ["Transformation", "Local Business", "Strategy", "Growth"],
  image: "/images/blog/digital-transformation-hero.jpg",
  readingTime: "15 min",
  featured: true
};

const displayedPost = featuredPost || defaultFeaturedPost;
---

<section class="relative bg-gradient-to-br from-forest-900 via-forest-800 to-sage-800 text-white overflow-hidden">
  <!-- Animated Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <!-- Floating Elements -->
    <div class="absolute top-20 left-10 w-32 h-32 border border-white/20 rounded-full animate-pulse-slow"></div>
    <div class="absolute top-40 right-20 w-24 h-24 border border-white/20 rounded-full animate-bounce-subtle"></div>
    <div class="absolute bottom-32 left-1/4 w-16 h-16 border border-white/20 rounded-full animate-float-1"></div>
    <div class="absolute bottom-20 right-1/3 w-20 h-20 border border-white/20 rounded-full animate-float-2"></div>
    
    <!-- Grid Pattern -->
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.05) 1px, transparent 0); background-size: 40px 40px;"></div>
  </div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="text-center mb-16">
      <!-- Main Title -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6 text-balance leading-tight">
        <span class="inline-block animate-fade-in">{title}</span>
      </h1>
      
      <!-- Description -->
      <p class="text-xl md:text-2xl text-white/90 max-w-4xl mx-auto mb-8 text-balance animate-fade-in-delayed">
        {description}
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up">
        <a 
          href="#latest-posts"
          class="btn bg-white text-forest-900 hover:bg-gray-50 group"
        >
          Explore Articles
          <svg class="w-4 h-4 ml-2 group-hover:translate-y-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
          </svg>
        </a>
        <a 
          href="/contact"
          class="btn border-2 border-white text-white hover:bg-white hover:text-forest-900 transition-all duration-300"
        >
          Get Personal Insights
        </a>
      </div>
    </div>
    
    <!-- Featured Article Spotlight -->
    {showFeaturedPost && displayedPost && (
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-8">
          <span class="inline-flex items-center bg-sage-600 text-white px-4 py-2 rounded-full text-sm font-medium">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            Featured Article
          </span>
        </div>
        
        <article class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 hover:bg-white/15 transition-all duration-500 group">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <!-- Content -->
            <div class="order-2 lg:order-1">
              <!-- Meta -->
              <div class="flex items-center space-x-4 text-sm text-white/80 mb-4">
                <span class="bg-white/20 px-3 py-1 rounded-full">{displayedPost.category}</span>
                <time>{new Date(displayedPost.publishDate).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</time>
                <span>{displayedPost.readingTime} read</span>
              </div>
              
              <!-- Title -->
              <h2 class="text-2xl md:text-3xl font-heading font-bold mb-4 text-balance group-hover:text-beige-100 transition-colors duration-300">
                {displayedPost.title}
              </h2>
              
              <!-- Description -->
              <p class="text-white/90 mb-6 leading-relaxed">
                {displayedPost.description}
              </p>
              
              <!-- CTA -->
              <a 
                href={`/blog/${displayedPost.slug}`}
                class="inline-flex items-center bg-sage-600 hover:bg-sage-700 text-white px-6 py-3 rounded-lg font-medium transition-all duration-200 group-hover:translate-x-1"
              >
                Read Full Article
                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
            
            <!-- Image -->
            <div class="order-1 lg:order-2">
              {displayedPost.image ? (
                <img 
                  src={displayedPost.image} 
                  alt={displayedPost.title}
                  class="w-full h-64 lg:h-80 object-cover rounded-xl shadow-2xl group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              ) : (
                <div class="w-full h-64 lg:h-80 bg-gradient-to-br from-sage-400 to-forest-600 rounded-xl shadow-2xl flex items-center justify-center group-hover:scale-105 transition-transform duration-500">
                  <svg class="w-24 h-24 text-white/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 011 1l4 4v9a2 2 0 01-2 2z" />
                  </svg>
                </div>
              )}
            </div>
          </div>
        </article>
      </div>
    )}
    
    <!-- Scroll Indicator -->
    <div class="text-center mt-16">
      <div class="inline-flex flex-col items-center text-white/60">
        <span class="text-sm mb-2">Explore More</span>
        <div class="w-6 h-10 border-2 border-white/40 rounded-full flex justify-center">
          <div class="w-1 h-3 bg-white/60 rounded-full mt-2 animate-bounce"></div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom Wave Separator -->
  <div class="absolute bottom-0 left-0 w-full overflow-hidden">
    <svg class="relative block w-full h-20" preserveAspectRatio="none" viewBox="0 0 1200 120">
      <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" fill="rgba(245, 240, 230, 1)" fill-opacity="1"></path>
    </svg>
  </div>
</section>