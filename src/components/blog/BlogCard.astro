---
export interface Props {
  title: string;
  description: string;
  slug: string;
  publishDate: string;
  author: string;
  category: string;
  tags: string[];
  image?: string;
  readingTime?: string;
  featured?: boolean;
  className?: string;
}

const { 
  title, 
  description, 
  slug, 
  publishDate, 
  author, 
  category, 
  tags, 
  image, 
  readingTime, 
  featured = false,
  className = ""
} = Astro.props;

// Format publish date
const formattedDate = new Date(publishDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});

// Get first few tags for display
const displayTags = tags?.slice(0, 3) || [];
---

<article class={`group relative bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 hover:scale-105 transformation-card ${className}`}>
  <!-- Featured Badge -->
  {featured && (
    <div class="absolute top-4 left-4 z-10">
      <span class="bg-sage-600 text-white px-3 py-1 rounded-full text-xs font-bold shadow-lg">
        Featured
      </span>
    </div>
  )}
  
  <!-- Image -->
  <div class="relative overflow-hidden">
    {image ? (
      <img 
        src={image} 
        alt={title}
        class="w-full h-48 object-cover group-hover:scale-110 transition-transform duration-700"
        loading="lazy"
      />
    ) : (
      <!-- Default gradient background -->
      <div class="w-full h-48 bg-gradient-to-br from-forest-100 to-sage-100 flex items-center justify-center">
        <div class="text-forest-600 opacity-50">
          <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 011 1l4 4v9a2 2 0 01-2 2z" />
          </svg>
        </div>
      </div>
    )}
    
    <!-- Category Badge -->
    <div class="absolute bottom-4 left-4">
      <span class="bg-white/90 backdrop-blur-sm text-forest-800 px-3 py-1 rounded-full text-xs font-medium shadow-lg">
        {category}
      </span>
    </div>
    
    <!-- Reading Time -->
    {readingTime && (
      <div class="absolute bottom-4 right-4">
        <span class="bg-black/50 text-white px-2 py-1 rounded text-xs">
          {readingTime}
        </span>
      </div>
    )}
  </div>
  
  <!-- Content -->
  <div class="p-6">
    <!-- Meta Info -->
    <div class="flex items-center space-x-4 text-sm text-gray-500 mb-3">
      <time datetime={publishDate}>{formattedDate}</time>
      <span class="text-gray-300">â€¢</span>
      <span>By {author}</span>
    </div>
    
    <!-- Title -->
    <h3 class="text-xl font-heading font-bold text-forest-900 mb-3 line-clamp-2 group-hover:text-sage-700 transition-colors duration-300">
      <a href={`/blog/${slug}`} class="hover:underline">
        {title}
      </a>
    </h3>
    
    <!-- Description -->
    <p class="text-gray-600 mb-4 line-clamp-3 leading-relaxed">
      {description}
    </p>
    
    <!-- Tags -->
    {displayTags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4">
        {displayTags.map((tag) => (
          <span class="bg-sage-50 text-sage-700 px-2 py-1 rounded text-xs font-medium">
            {tag}
          </span>
        ))}
        {tags && tags.length > 3 && (
          <span class="text-gray-400 text-xs px-2 py-1">
            +{tags.length - 3} more
          </span>
        )}
      </div>
    )}
    
    <!-- CTA -->
    <div class="flex items-center justify-between">
      <a 
        href={`/blog/${slug}`}
        class="inline-flex items-center text-sage-600 hover:text-sage-700 font-medium text-sm group-hover:translate-x-1 transition-all duration-300"
      >
        Read More
        <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </a>
      
      <!-- Quick Actions -->
      <div class="flex items-center space-x-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        <button 
          class="p-2 text-gray-400 hover:text-sage-600 rounded-full hover:bg-sage-50 transition-colors duration-200"
          aria-label="Bookmark article"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
          </svg>
        </button>
        <button 
          class="p-2 text-gray-400 hover:text-sage-600 rounded-full hover:bg-sage-50 transition-colors duration-200"
          aria-label="Share article"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Transformation Effect Background -->
  <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none">
    <div class="absolute top-4 right-4 w-2 h-2 bg-sage-400 rounded-full animate-pulse"></div>
    <div class="absolute bottom-8 left-8 w-1 h-1 bg-forest-400 rounded-full animate-bounce-subtle"></div>
    <div class="absolute top-1/2 right-8 w-1.5 h-1.5 bg-beige-400 rounded-full animate-float-1"></div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>