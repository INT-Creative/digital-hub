---
export interface Props {
  title: string;
  url: string;
  className?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { title, url, className = "", size = "md" } = Astro.props;

// Encode title and URL for sharing
const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);

// Share URLs
const shareUrls = {
  twitter: `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}&via=intcreative_co`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
  email: `mailto:?subject=${encodedTitle}&body=Check out this article: ${encodedUrl}`
};

// Size classes
const sizeClasses = {
  sm: "w-8 h-8 p-1.5",
  md: "w-10 h-10 p-2",
  lg: "w-12 h-12 p-2.5"
};

const iconSizeClasses = {
  sm: "w-4 h-4",
  md: "w-5 h-5",
  lg: "w-6 h-6"
};
---

<div class={`flex items-center space-x-3 ${className}`}>
  <!-- Twitter/X -->
  <a 
    href={shareUrls.twitter}
    target="_blank"
    rel="noopener noreferrer"
    class={`${sizeClasses[size]} bg-blue-50 hover:bg-blue-100 text-blue-600 rounded-full transition-all duration-200 hover:scale-110 hover:shadow-md group`}
    aria-label="Share on Twitter"
  >
    <svg class={`${iconSizeClasses[size]} group-hover:scale-110 transition-transform duration-200`} fill="currentColor" viewBox="0 0 24 24">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
  </a>
  
  <!-- LinkedIn -->
  <a 
    href={shareUrls.linkedin}
    target="_blank"
    rel="noopener noreferrer"
    class={`${sizeClasses[size]} bg-blue-50 hover:bg-blue-100 text-blue-700 rounded-full transition-all duration-200 hover:scale-110 hover:shadow-md group`}
    aria-label="Share on LinkedIn"
  >
    <svg class={`${iconSizeClasses[size]} group-hover:scale-110 transition-transform duration-200`} fill="currentColor" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
  </a>
  
  <!-- Facebook -->
  <a 
    href={shareUrls.facebook}
    target="_blank"
    rel="noopener noreferrer"
    class={`${sizeClasses[size]} bg-blue-50 hover:bg-blue-100 text-blue-800 rounded-full transition-all duration-200 hover:scale-110 hover:shadow-md group`}
    aria-label="Share on Facebook"
  >
    <svg class={`${iconSizeClasses[size]} group-hover:scale-110 transition-transform duration-200`} fill="currentColor" viewBox="0 0 24 24">
      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
    </svg>
  </a>
  
  <!-- Email -->
  <a 
    href={shareUrls.email}
    class={`${sizeClasses[size]} bg-gray-50 hover:bg-gray-100 text-gray-600 rounded-full transition-all duration-200 hover:scale-110 hover:shadow-md group`}
    aria-label="Share via email"
  >
    <svg class={`${iconSizeClasses[size]} group-hover:scale-110 transition-transform duration-200`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>
  </a>
  
  <!-- Copy Link -->
  <button 
    class={`${sizeClasses[size]} bg-sage-50 hover:bg-sage-100 text-sage-600 rounded-full transition-all duration-200 hover:scale-110 hover:shadow-md group copy-link-btn`}
    aria-label="Copy link"
    data-url={url}
  >
    <svg class={`${iconSizeClasses[size]} group-hover:scale-110 transition-transform duration-200`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
    </svg>
  </button>
</div>

<script>
  // Copy link functionality
  document.addEventListener('DOMContentLoaded', function() {
    const copyButtons = document.querySelectorAll('.copy-link-btn');
    
    copyButtons.forEach(button => {
      button.addEventListener('click', async function() {
        const url = this.getAttribute('data-url');
        
        try {
          await navigator.clipboard.writeText(url);
          
          // Visual feedback
          const originalSvg = this.innerHTML;
          this.innerHTML = `
            <svg class="${this.querySelector('svg').className}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          `;
          this.classList.add('bg-green-50', 'text-green-600');
          this.classList.remove('bg-sage-50', 'text-sage-600');
          
          setTimeout(() => {
            this.innerHTML = originalSvg;
            this.classList.remove('bg-green-50', 'text-green-600');
            this.classList.add('bg-sage-50', 'text-sage-600');
          }, 2000);
          
        } catch (err) {
          console.error('Failed to copy link:', err);
          // Fallback for older browsers
          const textArea = document.createElement('textarea');
          textArea.value = url;
          document.body.appendChild(textArea);
          textArea.select();
          document.execCommand('copy');
          document.body.removeChild(textArea);
        }
      });
    });
  });
</script>