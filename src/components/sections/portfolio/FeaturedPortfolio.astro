---
// Featured Portfolio Component - For homepage integration
// Matches existing home page component patterns
export interface Props {
  limit?: number;
  showHeader?: boolean;
}

const { limit = 3, showHeader = true } = Astro.props;

// Featured portfolio items (subset of full portfolio)
const featuredPortfolio = [
  {
    id: 'wellness-studio-transformation',
    slug: 'wellness-studio-transformation',
    title: 'Serenity Wellness Studio',
    category: 'Website Development',
    serviceType: 'website-development',
    tagline: 'From 0 to 50 leads/month',
    description: 'Complete website overhaul with booking system that increased client inquiries by 400% in 60 days.',
    thumbnail: '/images/portfolio/wellness-studio-hero.jpg',
    clientResults: {
      timeframe: '60 days',
      metric: '400% increase in leads',
      keyOutcome: '0 to 50 qualified leads per month'
    },
    technologies: ['Webflow', 'Calendly', 'HubSpot Forms'],
    completedDate: '2024-08-15'
  },
  {
    id: 'hvac-lead-generation',
    slug: 'hvac-lead-generation',
    title: 'Northeast HVAC Solutions',
    category: 'Digital Marketing',
    serviceType: 'digital-marketing',
    tagline: 'Cut lead cost by 60%',
    description: 'Facebook ads and automation system that reduced cost-per-lead from $85 to $32 while tripling volume.',
    thumbnail: '/images/portfolio/hvac-dashboard.jpg',
    clientResults: {
      timeframe: '90 days',
      metric: '60% reduction in cost-per-lead',
      keyOutcome: '$85 to $32 cost per qualified lead'
    },
    technologies: ['Meta Ads', 'HubSpot', 'Zapier', 'Webflow'],
    completedDate: '2024-07-22'
  },
  {
    id: 'law-firm-rebrand',
    slug: 'law-firm-rebrand',
    title: 'Thompson Legal Group',
    category: 'Graphic Design',
    serviceType: 'graphic-design',
    tagline: 'Modern professional identity',
    description: 'Complete rebrand for family law practice that increased referrals and built trust with younger clients.',
    thumbnail: '/images/portfolio/law-firm-brand.jpg',
    clientResults: {
      timeframe: '30 days',
      metric: '35% increase in referrals',
      keyOutcome: 'Enhanced professional credibility'
    },
    technologies: ['Adobe Creative Suite', 'Brand Strategy'],
    completedDate: '2024-06-10'
  }
];

// Service type color mapping (matching their existing patterns)
const getServiceColor = (serviceType: string) => {
  const colors = {
    'website-development': 'from-forest-900 to-sage-800',
    'digital-marketing': 'from-sage-700 to-forest-800',
    'graphic-design': 'from-forest-800 to-sage-700',
    'marketing-automation': 'from-sage-800 to-forest-900'
  };
  return colors[serviceType] || 'from-forest-900 to-sage-800';
};

const displayItems = featuredPortfolio.slice(0, limit);
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {showHeader && (
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-heading font-bold text-forest-900 mb-4">
          Success Stories from Real Clients
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto mb-8">
          See how service businesses like yours transformed challenges into competitive advantages with the right strategy and execution.
        </p>
        
        <!-- Success indicator -->
        <div class="flex justify-center items-center space-x-2">
          <div class="w-2 h-2 bg-red-400 rounded-full animate-pulse"></div>
          <div class="w-16 h-0.5 bg-gradient-to-r from-red-400 via-yellow-400 to-sage-500"></div>
          <div class="w-2 h-2 bg-yellow-400 rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
          <div class="w-16 h-0.5 bg-gradient-to-r from-yellow-400 to-sage-500"></div>
          <div class="w-2 h-2 bg-sage-500 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
        </div>
      </div>
    )}
    
    <!-- Portfolio Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {displayItems.map((project, index) => (
        <article 
          class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-500 border border-gray-100 transform hover:-translate-y-2 group relative overflow-hidden"
          style={`animation-delay: ${index * 200}ms`}
        >
          <!-- Thumbnail with overlay -->
          <div class="relative h-48 overflow-hidden rounded-t-xl">
            <div class={`absolute inset-0 bg-gradient-to-br ${getServiceColor(project.serviceType)} opacity-90`}></div>
            <!-- Placeholder for actual image -->
            <div class="absolute inset-0 bg-gray-200 flex items-center justify-center">
              <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            
            <!-- Service Category Badge -->
            <div class="absolute top-3 left-3">
              <span class="bg-white/90 backdrop-blur-sm text-forest-900 px-3 py-1 rounded-full text-xs font-medium">
                {project.category}
              </span>
            </div>
            
            <!-- Results preview overlay -->
            <div class="absolute inset-0 bg-forest-900/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
              <div class="text-center text-white">
                <div class="text-lg font-bold mb-1">{project.clientResults.metric}</div>
                <div class="text-sm text-beige-100">in {project.clientResults.timeframe}</div>
              </div>
            </div>
          </div>
          
          <!-- Content -->
          <div class="p-6">
            <!-- Title & Tagline -->
            <h3 class="text-xl font-bold text-forest-900 mb-2 group-hover:text-sage-700 transition-colors duration-300">
              {project.title}
            </h3>
            <p class="text-sm text-sage-700 font-medium mb-3">
              {project.tagline}
            </p>
            
            <!-- Description -->
            <p class="text-gray-600 mb-4 leading-relaxed text-sm">
              {project.description}
            </p>
            
            <!-- Key Result Highlight -->
            <div class="bg-gradient-to-r from-sage-50 to-beige-50 rounded-lg p-3 mb-4 border-l-3 border-sage-500 relative overflow-hidden group/result">
              <div class="absolute inset-0 bg-gradient-to-r from-sage-100/0 via-sage-200/20 to-sage-100/0 transform -translate-x-full group-hover/result:translate-x-full transition-transform duration-700"></div>
              <div class="relative z-10">
                <div class="text-xs text-sage-600 font-medium mb-1">TRANSFORMATION RESULT</div>
                <div class="text-sm font-semibold text-forest-900">{project.clientResults.keyOutcome}</div>
              </div>
            </div>
            
            <!-- Technologies used -->
            <div class="mb-4">
              <div class="text-xs text-gray-500 font-medium mb-2">SOLUTION STACK</div>
              <div class="flex flex-wrap gap-1">
                {project.technologies.slice(0, 2).map((tech) => (
                  <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs">
                    {tech}
                  </span>
                ))}
                {project.technologies.length > 2 && (
                  <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded text-xs">
                    +{project.technologies.length - 2} more
                  </span>
                )}
              </div>
            </div>
            
            <!-- CTA Button -->
            <a 
              href={`/portfolio/${project.slug}`}
              class="w-full bg-sage-600 hover:bg-sage-700 text-white py-3 px-4 rounded-lg font-medium text-center transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 transform relative overflow-hidden group/btn block text-sm"
            >
              <span class="relative z-10">Read Full Case Study</span>
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -translate-x-full group-hover/btn:translate-x-full transition-transform duration-500"></div>
            </a>
          </div>
          
          <!-- Card hover effect border -->
          <div class="absolute inset-0 border-2 border-sage-600/20 rounded-xl opacity-0 group-hover:opacity-100 transform scale-95 group-hover:scale-100 transition-all duration-500 pointer-events-none"></div>
        </article>
      ))}
    </div>
    
    <!-- View Portfolio CTA -->
    <div class="text-center mt-12">
      <a 
        href="/portfolio"
        class="inline-block bg-forest-900 hover:bg-forest-800 text-white px-8 py-3 rounded-lg font-medium transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 transform relative overflow-hidden group mr-4"
      >
        <span class="relative z-10">View Complete Portfolio</span>
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-500"></div>
      </a>
      
      <a 
        href="/contact"
        class="inline-block bg-sage-600 hover:bg-sage-700 text-white px-8 py-3 rounded-lg font-medium transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 transform relative overflow-hidden group"
      >
        <span class="relative z-10">Start Your Project</span>
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-500"></div>
      </a>
    </div>
    
    <!-- Trust Builder -->
    <div class="mt-16 text-center bg-white rounded-2xl p-8 max-w-4xl mx-auto shadow-sm border border-gray-200 relative overflow-hidden group">
      <div class="absolute inset-0 bg-gradient-to-r from-beige-50/0 via-sage-50/50 to-beige-50/0 transform -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
      <div class="relative z-10">
        <h3 class="text-xl font-heading font-semibold text-forest-900 mb-3 group-hover:scale-105 transition-transform duration-300">
          Every Success Story Started with a Conversation
        </h3>
        <p class="text-gray-700 group-hover:text-gray-900 transition-colors duration-300 mb-4">
          These results didn't happen by accident. Each project began with understanding specific challenges, then building custom solutions that actually work for service businesses.
        </p>
        <div class="flex items-center justify-center space-x-6 text-sm text-gray-600">
          <div class="flex items-center">
            <svg class="w-4 h-4 text-sage-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Fixed-fee projects
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 text-sage-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Clear timelines
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 text-sage-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            Measurable outcomes
          </div>
        </div>
      </div>
      
      <!-- Portfolio sparkles -->
      <div class="absolute top-3 right-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        <div class="w-1 h-1 bg-sage-400 rounded-full animate-pulse"></div>
        <div class="w-0.5 h-0.5 bg-sage-500 rounded-full animate-pulse" style="margin-left: 6px; margin-top: -4px; animation-delay: 0.5s;"></div>
      </div>
      <div class="absolute bottom-3 left-3 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
        <div class="w-0.5 h-0.5 bg-sage-300 rounded-full animate-pulse" style="animation-delay: 0.3s;"></div>
        <div class="w-1 h-1 bg-sage-400 rounded-full animate-pulse" style="margin-left: 8px; margin-top: -6px; animation-delay: 0.8s;"></div>
      </div>
    </div>
  </div>
</section>