---
import { servicesData } from '../../../data/services';

const { faqs, location } = servicesData;
---

<section class="py-20 bg-beige-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-heading font-bold text-forest-900 mb-4">
        Frequently Asked Questions
      </h2>
      <p class="text-xl text-gray-600 mb-4">
        Common questions about our services and how we work with clients.
      </p>
      <p class="text-lg text-sage-700 font-medium">
        {location.headline} ({location.cities.join(' â€¢ ')}), {location.availability}.
      </p>
    </div>
    
    <div class="space-y-4">
      {faqs.map((faq) => (
        <details class="bg-white rounded-xl shadow-sm group">
          <summary class="px-8 py-6 cursor-pointer list-none flex items-center justify-between hover:bg-gray-50 transition-colors">
            <h3 class="text-lg font-semibold text-forest-900 pr-4">
              {faq.question}
            </h3>
            <svg 
              class="w-5 h-5 text-sage-600 transition-transform group-open:rotate-180 flex-shrink-0" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </summary>
          <div class="px-8 pb-6">
            <p class="text-gray-600 leading-relaxed">
              {faq.answer}
            </p>
          </div>
        </details>
      ))}
    </div>
    
    <!-- CTA Section -->
    <div class="mt-16 text-center">
      <h3 class="text-xl font-heading font-semibold text-forest-900 mb-4">
        Have a different question?
      </h3>
      <p class="text-gray-600 mb-6">
        We're here to help. Let's discuss your specific needs.
      </p>
      <a 
        href={servicesData.globalCTA.primary.href}
        class="inline-block bg-sage-600 hover:bg-sage-700 text-white px-8 py-4 rounded-lg font-medium text-lg transition-colors duration-200 shadow-lg"
      >
        {servicesData.globalCTA.primary.text}
      </a>
      <p class="text-sm text-gray-600 mt-4">
        {servicesData.globalCTA.helper}
      </p>
    </div>
  </div>
</section>