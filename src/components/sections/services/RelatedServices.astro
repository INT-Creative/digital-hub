---
import { servicesData } from '../../../data/services';

export interface Props {
  currentService: string;
}

const { currentService } = Astro.props;

// Filter out the current service to show only related ones
const relatedServices = servicesData.services.filter(s => s.slug !== currentService);

// Service icons mapping
const serviceIcons = {
  'website-development': 'M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z',
  'digital-marketing': 'M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z',
  'graphic-design': 'M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zM21 5a2 2 0 00-2-2h-4a2 2 0 00-2 2v12a4 4 0 004 4h4a2 2 0 002-2V5z',
  'marketing-automation': 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z'
};

// Pricing ranges
const pricingRanges = {
  'website-development': '$2,500 - $7,500',
  'digital-marketing': '$2,000 - $5,000',
  'graphic-design': '$1,200 - $3,500',
  'marketing-automation': '$1,500 - $4,000'
};
---

<section class="py-20 bg-beige-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-heading font-bold text-forest-900 mb-4">
        Related Services
      </h2>
      <p class="text-xl text-gray-600">
        Complete your transformation with our complementary services
      </p>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {relatedServices.map((service) => (
        <a 
          href={`/services/${service.slug}`}
          class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 border border-gray-100 transform hover:-translate-y-2 group block"
        >
          <!-- Service Icon -->
          <div class="w-12 h-12 bg-gradient-to-br from-forest-900 to-sage-800 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 transition-transform duration-300">
            <svg 
              class="w-6 h-6 text-beige-50" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d={serviceIcons[service.slug as keyof typeof serviceIcons]}
              />
            </svg>
          </div>
          
          <!-- Service Title -->
          <h3 class="text-xl font-semibold text-forest-900 mb-2">
            {service.title}
          </h3>
          
          <!-- Service Description -->
          <p class="text-gray-600 mb-4 line-clamp-2">
            {service.description}
          </p>
          
          <!-- Pricing Range -->
          <div class="text-sm text-sage-700 font-medium mb-4">
            {pricingRanges[service.slug as keyof typeof pricingRanges]}
          </div>
          
          <!-- CTA -->
          <div class="flex items-center text-sage-600 font-medium group-hover:text-sage-700 transition-colors duration-200">
            <span>Learn More</span>
            <svg 
              class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform duration-200" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
            >
              <path 
                stroke-linecap="round" 
                stroke-linejoin="round" 
                stroke-width="2" 
                d="M9 5l7 7-7 7" 
              />
            </svg>
          </div>
        </a>
      ))}
    </div>
    
    <!-- All Services CTA -->
    <div class="text-center mt-12">
      <a 
        href="/services"
        class="inline-flex items-center text-sage-600 hover:text-sage-700 font-medium transition-colors duration-200"
      >
        <svg 
          class="w-5 h-5 mr-2" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path 
            stroke-linecap="round" 
            stroke-linejoin="round" 
            stroke-width="2" 
            d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" 
          />
        </svg>
        View All Services
      </a>
    </div>
  </div>
</section>