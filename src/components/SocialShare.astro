---
export interface Props {
  url: string;
  title: string;
  description?: string;
  style?: 'floating' | 'inline' | 'minimal';
  platforms?: string[];
  className?: string;
  showCounts?: boolean;
}

const { 
  url,
  title,
  description = '',
  style = 'inline',
  platforms = ['twitter', 'linkedin', 'facebook', 'reddit'],
  className = '',
  showCounts = false
} = Astro.props;

import { generateSharingURL } from '../config/social.ts';

// Get current page URL
const fullUrl = url.startsWith('http') ? url : `https://intcreative.co${url}`;

// Platform configurations with share-specific icons and colors
const shareConfig = {
  twitter: {
    name: 'Twitter',
    color: 'bg-blue-500 hover:bg-blue-600',
    textColor: 'text-blue-600 hover:text-blue-700'
  },
  linkedin: {
    name: 'LinkedIn', 
    color: 'bg-blue-700 hover:bg-blue-800',
    textColor: 'text-blue-700 hover:text-blue-800'
  },
  facebook: {
    name: 'Facebook',
    color: 'bg-blue-600 hover:bg-blue-700',
    textColor: 'text-blue-600 hover:text-blue-700'
  },
  reddit: {
    name: 'Reddit',
    color: 'bg-orange-500 hover:bg-orange-600',
    textColor: 'text-orange-500 hover:text-orange-600'
  },
  pinterest: {
    name: 'Pinterest',
    color: 'bg-red-500 hover:bg-red-600',
    textColor: 'text-red-500 hover:text-red-600'
  },
  whatsapp: {
    name: 'WhatsApp',
    color: 'bg-green-500 hover:bg-green-600',
    textColor: 'text-green-500 hover:text-green-600'
  },
  telegram: {
    name: 'Telegram',
    color: 'bg-blue-400 hover:bg-blue-500',
    textColor: 'text-blue-400 hover:text-blue-500'
  },
  email: {
    name: 'Email',
    color: 'bg-gray-600 hover:bg-gray-700',
    textColor: 'text-gray-600 hover:text-gray-700'
  }
};

// Style configurations
const getContainerClass = () => {
  switch (style) {
    case 'floating':
      return 'fixed left-4 top-1/2 transform -translate-y-1/2 z-50 space-y-3';
    case 'minimal':
      return 'flex items-center space-x-3';
    default:
      return 'flex flex-wrap items-center gap-3';
  }
};

const getButtonClass = (platform: string) => {
  const config = shareConfig[platform as keyof typeof shareConfig];
  
  switch (style) {
    case 'floating':
      return `${config.color} text-white p-3 rounded-full shadow-lg hover:shadow-xl transition-all duration-200 hover:scale-110`;
    case 'minimal':
      return `${config.textColor} p-2 rounded-lg hover:bg-gray-100 transition-all duration-200`;
    default:
      return `${config.color} text-white px-4 py-2 rounded-lg font-medium transition-all duration-200 hover:scale-105 flex items-center space-x-2`;
  }
};
---

<div class={`social-share ${getContainerClass()} ${className}`}>
  {style !== 'floating' && (
    <span class="text-gray-700 font-medium text-sm mr-2">Share:</span>
  )}
  
  {platforms.map((platform) => {
    const shareUrl = generateSharingURL(platform, fullUrl, title, description);
    const config = shareConfig[platform as keyof typeof shareConfig];
    
    if (!config) return null;
    
    return (
      <a
        href={shareUrl}
        target="_blank"
        rel="noopener noreferrer"
        class={`${getButtonClass(platform)} share-button`}
        aria-label={`Share on ${config.name}`}
        title={`Share on ${config.name}`}
