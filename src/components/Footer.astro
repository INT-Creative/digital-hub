---
import SocialIcons from './SocialIcons.astro';
import { SOCIAL_CONFIG } from '../config/social.ts';

const currentYear = new Date().getFullYear();

const services = [
  { name: "Website Development", href: "/services" },
  { name: "Software Automation", href: "/services" },
  { name: "Graphic Design", href: "/services" },
  { name: "Digital Marketing", href: "/services" },
];

const company = [
  { name: "About Us", href: "/about" },
  { name: "Portfolio", href: "/portfolio" },
  { name: "Blog", href: "/blog" },
  { name: "Contact", href: "/contact" },
];

---

<footer class="bg-forest-900 text-white">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <div class="flex items-center">
          <img class="h-8 w-auto" src="/images/logo-white.svg" alt="INT Creative" />
          <span class="ml-3 text-xl font-heading font-bold">INT Creative</span>
        </div>
        <p class="text-gray-300 text-sm mb-4">
          Bridging marketing strategy with technical implementation to help growing businesses succeed.
        </p>
        
        <!-- Enhanced Social Media Section -->
        <div class="space-y-4">
          <SocialIcons 
            size="md" 
            style="default" 
            platforms={['linkedin', 'twitter', 'facebook']}
            className="flex space-x-3"
          />
          
          <div class="pt-3 border-t border-forest-800">
            <p class="text-gray-400 text-xs font-medium">{SOCIAL_CONFIG.cta.follow}</p>
          </div>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold text-gray-100 uppercase tracking-wider mb-4">Services</h3>
        <ul class="space-y-3">
          {services.map((item) => (
            <li>
              <a href={item.href} class="text-gray-300 hover:text-white transition-colors duration-200 text-sm">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-sm font-semibold text-gray-100 uppercase tracking-wider mb-4">Company</h3>
        <ul class="space-y-3">
          {company.map((item) => (
            <li>
              <a href={item.href} class="text-gray-300 hover:text-white transition-colors duration-200 text-sm">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-sm font-semibold text-gray-100 uppercase tracking-wider mb-4">Contact</h3>
        <div class="space-y-3">
          <div class="text-gray-300 text-sm">
            <p>Ready to start your project?</p>
          </div>
          <div class="flex space-x-2">
            <a 
              href={SOCIAL_CONFIG.urls.linkedin} 
              target="_blank" 
              rel="noopener noreferrer"
              class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-xs font-medium transition-colors duration-200"
            >
              LinkedIn
            </a>
            <a 
              href={SOCIAL_CONFIG.urls.twitter} 
              target="_blank" 
              rel="noopener noreferrer"
              class="bg-blue-400 hover:bg-blue-500 text-white px-3 py-1 rounded text-xs font-medium transition-colors duration-200"
            >
              X (Twitter)
            </a>
          </div>
          <div>
            <a href="/contact" class="text-sage-400 hover:text-sage-300 text-sm font-medium transition-colors duration-200">
              Get Started →
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Bottom Footer -->
  <div class="border-t border-forest-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="md:flex md:items-center md:justify-between">
        <div class="text-gray-400 text-sm">
          © {currentYear} INT Creative LLC. All rights reserved.
        </div>
        <div class="mt-4 md:mt-0 flex flex-col md:flex-row md:items-center space-y-2 md:space-y-0 md:space-x-6">
          <div class="flex space-x-6">
            <a href="/privacy" class="text-gray-400 hover:text-white transition-colors duration-200 text-sm">
              Privacy Policy
            </a>
            <a href="/terms" class="text-gray-400 hover:text-white transition-colors duration-200 text-sm">
              Terms of Service
            </a>
          </div>
          
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  // Newsletter form handling
  document.addEventListener('DOMContentLoaded', function() {
    const newsletterForm = document.querySelector('footer form');
    
    newsletterForm?.addEventListener('submit', function(e) {
      e.preventDefault();
      const email = this.querySelector('input[type="email"]')?.value;
      
      // Here you would typically send to your email service
      // For now, just show a simple alert
      if (email) {
        alert('Thanks for subscribing! We\'ll send you our latest insights.');
        this.reset();
      }
    });
  });
</script>