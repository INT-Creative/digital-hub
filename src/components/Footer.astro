---
import SocialIcons from './SocialIcons.astro';
import { SOCIAL_CONFIG } from '../config/social.ts';

const currentYear = new Date().getFullYear();

const services = [
  { name: "Lead Generation", href: "/services/lead-generation" },
  { name: "Brand Development", href: "/services/branding" },
  { name: "Growth Strategy", href: "/services/growth-strategy" },
  { name: "Content Marketing", href: "/services/content-marketing" },
];

const company = [
  { name: "About Us", href: "/about" },
  { name: "Portfolio", href: "/portfolio" },
  { name: "Blog", href: "/blog" },
  { name: "Contact", href: "/contact" },
];

const resources = [
  { name: "Startup Marketing Guide", href: "/resources/startup-marketing-guide" },
  { name: "Lead Generation Tools", href: "/resources/lead-generation-tools" },
  { name: "Brand Strategy Template", href: "/resources/brand-strategy-template" },
  { name: "Growth Metrics Calculator", href: "/resources/growth-calculator" },
];
---

<footer class="bg-forest-900 text-white">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="space-y-4">
        <div class="flex items-center">
          <img class="h-8 w-auto" src="/images/logo-white.svg" alt="INT Creative" />
          <span class="ml-3 text-xl font-heading font-bold">INT Creative</span>
        </div>
        <p class="text-gray-300 text-sm mb-4">
          Helping startups scale from idea to market leader through data-driven marketing strategies and proven growth systems.
        </p>
        
        <!-- Enhanced Social Media Section -->
        <div class="space-y-4">
          <SocialIcons 
            size="md" 
            style="default" 
            platforms={['linkedin', 'twitter', 'instagram', 'facebook', 'youtube']}
            className="flex space-x-3"
          />
          
          <div class="pt-3 border-t border-forest-800">
            <p class="text-gray-400 text-xs font-medium mb-2">{SOCIAL_CONFIG.cta.follow}</p>
            <div class="grid grid-cols-2 gap-2 text-xs">
              <div class="flex items-center space-x-1">
                <svg class="w-3 h-3 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                <span class="text-gray-400">2.5K+ followers</span>
              </div>
              <div class="flex items-center space-x-1">
                <svg class="w-3 h-3 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                <span class="text-gray-400">3.2K+ followers</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold text-gray-100 uppercase tracking-wider mb-4">Services</h3>
        <ul class="space-y-3">
          {services.map((item) => (
            <li>
              <a href={item.href} class="text-gray-300 hover:text-white transition-colors duration-200 text-sm">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-sm font-semibold text-gray-100 uppercase tracking-wider mb-4">Company</h3>
        <ul class="space-y-3">
          {company.map((item) => (
            <li>
              <a href={item.href} class="text-gray-300 hover:text-white transition-colors duration-200 text-sm">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources & Social -->
      <div>
        <h3 class="text-sm font-semibold text-gray-100 uppercase tracking-wider mb-4">Resources</h3>
        <ul class="space-y-3 mb-6">
          {resources.map((item) => (
            <li>
              <a href={item.href} class="text-gray-300 hover:text-white transition-colors duration-200 text-sm">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
        
        <!-- Social Call-to-Action -->
        <div class="bg-forest-800 rounded-lg p-4 mt-6">
          <h4 class="text-sm font-semibold text-white mb-2">Connect With Us</h4>
          <p class="text-xs text-gray-300 mb-3">Join our community for exclusive insights</p>
          <div class="flex space-x-2">
            <a 
              href={SOCIAL_CONFIG.urls.linkedin} 
              target="_blank" 
              rel="noopener noreferrer"
              class="bg-blue-600 hover:bg-blue-700 text-white px-2 py-1 rounded text-xs font-medium transition-colors duration-200"
            >
              LinkedIn
            </a>
            <a 
              href={SOCIAL_CONFIG.urls.twitter} 
              target="_blank" 
              rel="noopener noreferrer"
              class="bg-blue-400 hover:bg-blue-500 text-white px-2 py-1 rounded text-xs font-medium transition-colors duration-200"
            >
              Twitter
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Newsletter Signup -->
  <div class="border-t border-forest-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="md:flex md:items-center md:justify-between">
        <div class="mb-4 md:mb-0">
          <h3 class="text-lg font-semibold text-white mb-2">Stay ahead of the curve</h3>
          <p class="text-gray-300 text-sm mb-2">Get startup marketing insights and growth strategies delivered to your inbox.</p>
          <p class="text-xs text-gray-400">
            Join 2,500+ founders • Also follow us on 
            <a href={SOCIAL_CONFIG.urls.linkedin} target="_blank" rel="noopener noreferrer" class="text-blue-400 hover:text-blue-300 transition-colors duration-200">LinkedIn</a> & 
            <a href={SOCIAL_CONFIG.urls.twitter} target="_blank" rel="noopener noreferrer" class="text-blue-400 hover:text-blue-300 transition-colors duration-200">Twitter</a>
          </p>
        </div>
        <form class="flex flex-col sm:flex-row gap-3 max-w-md">
          <input
            type="email"
            placeholder="Enter your email"
            class="px-4 py-2 rounded-lg bg-forest-800 border border-forest-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-sage-500 flex-1"
            required
          />
          <button
            type="submit"
            class="bg-sage-600 hover:bg-sage-700 text-white px-6 py-2 rounded-lg font-medium transition-colors duration-200 whitespace-nowrap"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Bottom Footer -->
  <div class="border-t border-forest-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="md:flex md:items-center md:justify-between">
        <div class="text-gray-400 text-sm">
          © {currentYear} INT Creative LLC. All rights reserved.
        </div>
        <div class="mt-4 md:mt-0 flex flex-col md:flex-row md:items-center space-y-2 md:space-y-0 md:space-x-6">
          <div class="flex space-x-6">
            <a href="/privacy" class="text-gray-400 hover:text-white transition-colors duration-200 text-sm">
              Privacy Policy
            </a>
            <a href="/terms" class="text-gray-400 hover:text-white transition-colors duration-200 text-sm">
              Terms of Service
            </a>
          </div>
          
          <!-- Social Media Hashtags -->
          <div class="hidden md:block">
            <span class="text-gray-500 text-xs">
              #{SOCIAL_CONFIG.sharing.hashtagsSuggested.join(' #')}
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<script>
  // Newsletter form handling
  document.addEventListener('DOMContentLoaded', function() {
    const newsletterForm = document.querySelector('footer form');
    
    newsletterForm?.addEventListener('submit', function(e) {
      e.preventDefault();
      const email = this.querySelector('input[type="email"]')?.value;
      
      // Here you would typically send to your email service
      // For now, just show a simple alert
      if (email) {
        alert('Thanks for subscribing! We\'ll send you our latest insights.');
        this.reset();
      }
    });
  });
</script>