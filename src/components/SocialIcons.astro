---
export interface Props {
  size?: 'sm' | 'md' | 'lg';
  style?: 'default' | 'minimal' | 'colored';
  platforms?: string[];
  showLabels?: boolean;
  className?: string;
  iconClassName?: string;
}

const { 
  size = 'md', 
  style = 'default', 
  platforms = ['linkedin', 'twitter', 'instagram', 'facebook'],
  showLabels = false,
  className = '',
  iconClassName = ''
} = Astro.props;

import { SOCIAL_CONFIG, SOCIAL_PLATFORMS } from '../config/social.ts';

// Size classes
const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-5 h-5', 
  lg: 'w-6 h-6'
};

const containerSizeClasses = {
  sm: 'p-2',
  md: 'p-2.5',
  lg: 'p-3'
};

// Style classes
const getStyleClasses = (platform: string, style: string) => {
  const platformConfig = SOCIAL_PLATFORMS[platform as keyof typeof SOCIAL_PLATFORMS];
  
  switch (style) {
    case 'colored':
      return `bg-[${platformConfig.color}] hover:bg-[${platformConfig.hoverColor}] text-white`;
    case 'minimal':
      return 'text-gray-600 hover:text-gray-900';
    default:
      return 'text-gray-400 hover:text-white bg-gray-800 hover:bg-gray-700';
  }
};
---

<div class={`flex items-center space-x-3 ${className}`}>
  {platforms.map((platform) => {
    const url = SOCIAL_CONFIG.urls[platform as keyof typeof SOCIAL_CONFIG.urls];
    const platformConfig = SOCIAL_PLATFORMS[platform as keyof typeof SOCIAL_PLATFORMS];
    
    if (!url || !platformConfig) return null;
    
    return (
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class={`inline-flex items-center justify-center rounded-lg transition-all duration-200 hover:scale-105 ${containerSizeClasses[size]} ${getStyleClasses(platform, style)} ${iconClassName}`}
        aria-label={`Follow us on ${platformConfig.name}`}
        title={`Follow us on ${platformConfig.name}`}
      >
        {platform === 'twitter' && (
          <svg class={sizeClasses[size]} fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
