---
export interface Props {
  type?: 'testimonials' | 'followers' | 'mentions' | 'combined';
  layout?: 'grid' | 'carousel' | 'inline';
  showCounts?: boolean;
  className?: string;
}

const { 
  type = 'combined',
  layout = 'grid',
  showCounts = true,
  className = ''
} = Astro.props;

import { SOCIAL_CONFIG } from '../config/social.ts';

// Sample social proof data - in production, this would come from APIs or CMS
const socialStats = {
  linkedin: {
    followers: '2.5K',
    engagement: '156 this week'
  },
  twitter: {
    followers: '3.2K', 
    engagement: '89 this week'
  },
  instagram: {
    followers: '1.8K',
    engagement: '234 this week'
  }
};

const testimonials = [
  {
    id: 1,
    text: "INT Creative helped us go from 0 to 10K qualified leads in just 6 months. Their data-driven approach is exactly what we needed.",
    author: "Sarah Chen",
    title: "CEO, TechFlow",
    avatar: "/images/testimonials/sarah-chen.jpg",
    platform: "linkedin",
    verified: true
  },
  {
    id: 2,
    text: "The marketing strategy INT Creative developed increased our conversion rate by 340%. Best investment we've made.",
    author: "Marcus Rodriguez",
    title: "Founder, GrowthLab",
    avatar: "/images/testimonials/marcus-rodriguez.jpg", 
    platform: "twitter",
    verified: true
  },
  {
    id: 3,
    text: "Professional team that actually delivers results. Our lead quality improved dramatically after working with them.",
    author: "Emily Watson",
    title: "CMO, StartupX",
    avatar: "/images/testimonials/emily-watson.jpg",
    platform: "linkedin",
    verified: true
  }
];

const socialMentions = [
  {
    platform: 'twitter',
    author: '@startupfounder',
    text: "Just discovered @intcreative - their marketing insights are gold for early-stage startups!",
    engagement: 24,
    verified: false
  },
  {
    platform: 'linkedin',
    author: 'Tech CEO Network',
    text: "Excellent case study on B2B lead generation from INT Creative. Must-read for founders.",
    engagement: 156,
    verified: true
  }
];
---

<div class={`social-proof ${className}`}>
  {(type === 'followers' || type === 'combined') && showCounts && (
    <div class="social-stats mb-8">
      <div class="text-center mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Join Our Growing Community</h3>
        <p class="text-gray-600">Follow us for daily startup marketing insights</p>
      </div>
      
      <div class="flex justify-center space-x-8">
        <a 
          href={SOCIAL_CONFIG.urls.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center space-x-2 text-blue-700 hover:text-blue-800 transition-colors duration-200"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          <div class="text-center">
            <div class="font-bold text-lg">{socialStats.linkedin.followers}</div>
            <div class="text-xs text-gray-600">Followers</div>
          </div>
        </a>
        
        <a 
          href={SOCIAL_CONFIG.urls.twitter}
          target="_blank" 
          rel="noopener noreferrer"
          class="flex items-center space-x-2 text-blue-500 hover:text-blue-600 transition-colors duration-200"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
          <div class="text-center">
            <div class="font-bold text-lg">{socialStats.twitter.followers}</div>
            <div class="text-xs text-gray-600">Followers</div>
          </div>
        </a>
        
        <a 
          href={SOCIAL_CONFIG.urls.instagram}
          target="_blank"
          rel="noopener noreferrer" 
          class="flex items-center space-x-2 text-pink-600 hover:text-pink-700 transition-colors duration-200"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12.017 0C8.396 0 7.989.016 6.756.072 5.526.127 4.718.372 4.037.7c-.707.275-1.305.646-1.901 1.244-.596.598-.969 1.195-1.244 1.902C.372 4.718.127 5.526.072 6.756.016 7.989 0 8.396 0 12.017c0 3.624.016 4.031.072 5.264.055 1.23.3 2.038.628 2.719.275.707.646 1.305 1.244 1.901.598.596 1.195.969 1.902 1.244.681.328 1.489.573 2.719.628 1.233.056 1.64.072 5.264.072 3.624 0 4.031-.016 5.264-.072 1.23-.055 2.038-.3 2.719-.628.707-.275 1.305-.646 1.901-1.244.596-.598.969-1.195 1.244-1.902.328-.681.573-1.489.628-2.719.056-1.233.072-1.64.072-5.264 0-3.624-.016-4.031-.072-5.264-.055-1.23-.3-2.038-.628-2.719-.275-.707-.646-1.305-1.244-1.901C19.06.646 18.463.275 17.756 0 17.075-.328 16.267-.573 15.037-.628 13.804-.684 13.397-.7 9.773-.7s-4.031.016-5.264.072zm-.117 21.674c-3.365 0-3.739-.015-5.048-.069-1.206-.054-1.86-.259-2.294-.429-.576-.224-.987-.49-1.42-.923-.432-.433-.7-.844-.923-1.42-.17-.434-.375-1.088-.429-2.294-.054-1.309-.069-1.683-.069-5.048s.015-3.739.069-5.048c.054-1.206.259-1.86.429-2.294.224-.576.49-.987.923-1.42.433-.432.844-.7 1.42-.923.434-.17 1.088-.375 2.294-.429C8.375.085 8.749.07 12.114.07s3.739.015 5.048.069c1.206.054 1.86.259 2.294.429.576.224.987.49 1.42.923.432.433.7.844.923 1.42.17.434.375 1.088.429 2.294.054 1.309.069 1.683.069 5.048s-.015 3.739-.069 5.048c-.054 1.206-.259 1.86-.429 2.294-.224.576-.49.987-.923 1.42-.433.432-.844.7-1.42.923-.434.17-1.088.375-2.294.429-1.309.054-1.683.069-5.048.069z"/>
          </svg>
          <div class="text-center">
            <div class="font-bold text-lg">{socialStats.instagram.followers}</div>
            <div class="text-xs text-gray-600">Followers</div>
          </div>
        </a>
      </div>
    </div>
  )}

  {(type === 'testimonials' || type === 'combined') && (
    <div class="testimonials">
      <div class="text-center mb-8">
        <h3 class="text-xl font-semibold text-gray-900 mb-2">What Our Clients Say</h3>
        <p class="text-gray-600">Real feedback from founders we've helped scale</p>
      </div>
      
      <div class={`${layout === 'grid' ? 'grid md:grid-cols-2 lg:grid-cols-3 gap-6' : 'space-y-6'}`}>
        {testimonials.map((testimonial) => (
          <div class="bg-white rounded-lg border border-gray-200 p-6 shadow-sm hover:shadow-md transition-shadow duration-200">
            <div class="flex items-start space-x-3 mb-4">
              <div class="w-10 h-10 bg-gradient-to-br from-sage-200 to-beige-200 rounded-full flex-shrink-0 flex items-center justify-center">
                <span class="text-forest-700 font-medium text-sm">
                  {testimonial.author.split(' ').map(n => n[0]).join('')}
                </span>
              </div>
              <div class="flex-1">
                <div class="flex items-center space-x-2">
                  <h4 class="font-semibold text-gray-900">{testimonial.author}</h4>
                  {testimonial.verified && (
                    <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  )}
                </div>
                <p class="text-sm text-gray-600">{testimonial.title}</p>
                <div class="flex items-center space-x-1 mt-1">
                  {testimonial.platform === 'linkedin' && (
                    <svg class="w-3 h-3 text-blue-700" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  )}
                  {testimonial.platform === 'twitter' && (
                    <svg class="w-3 h-3 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                  )}
                  <span class="text-xs text-gray-500 capitalize">{testimonial.platform}</span>
                </div>
              </div>
            </div>
            
            <blockquote class="text-gray-700 italic">
              "{testimonial.text}"
            </blockquote>
            
            <div class="flex items-center justify-between mt-4">
              <div class="flex text-yellow-400">
                {[...Array(5)].map((_, i) => (
                  <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                ))}
              </div>
              
              <a 
                href={testimonial.platform === 'linkedin' ? SOCIAL_CONFIG.urls.linkedin : SOCIAL_CONFIG.urls.twitter}
                target="_blank"
                rel="noopener noreferrer"
                class="text-xs text-gray-500 hover:text-gray-700 transition-colors duration-200"
              >
                View original →
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  )}

  {(type === 'mentions' || type === 'combined') && (
    <div class="social-mentions mt-12">
      <div class="text-center mb-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Social Buzz</h3>
        <p class="text-gray-600">See what the startup community is saying</p>
      </div>
      
      <div class="max-w-2xl mx-auto space-y-4">
        {socialMentions.map((mention, index) => (
          <div key={index} class="bg-gray-50 rounded-lg p-4 border-l-4 border-sage-500">
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0">
                {mention.platform === 'twitter' && (
                  <svg class="w-5 h-5 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                  </svg>
                )}
                {mention.platform === 'linkedin' && (
                  <svg class="w-5 h-5 text-blue-700" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
              </div>
              <div class="flex-1">
                <div class="flex items-center space-x-2 mb-2">
                  <span class="font-medium text-gray-900">{mention.author}</span>
                  {mention.verified && (
                    <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  )}
                  <span class="text-xs text-gray-500">• {mention.engagement} likes</span>
                </div>
                <p class="text-gray-700 mb-2">"{mention.text}"</p>
                <a 
                  href={mention.platform === 'linkedin' ? SOCIAL_CONFIG.urls.linkedin : SOCIAL_CONFIG.urls.twitter}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-xs text-sage-600 hover:text-sage-700 transition-colors duration-200"
                >
                  View post →
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  )}
</div>