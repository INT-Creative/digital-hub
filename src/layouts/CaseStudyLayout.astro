---
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/common/Breadcrumbs.astro';
import { servicesData } from '../data/services';

export interface CaseStudyData {
  id: string;
  slug: string;
  title: string;
  category: string;
  serviceType: string;
  description: string;
  clientResults: {
    timeframe: string;
    metric: string;
    keyOutcome: string;
  };
  technologies: string[];
  challenges: string[];
  solutions: string[];
  liveUrl?: string;
  completedDate: string;
  // Extended case study data
  clientInfo: {
    name: string;
    industry: string;
    size: string;
    location: string;
  };
  projectScope: {
    duration: string;
    budget: string;
    teamSize: string;
  };
  beforeAfterMetrics: {
    metric: string;
    before: string;
    after: string;
    improvement: string;
  }[];
  processSteps: {
    phase: string;
    title: string;
    description: string;
    deliverables: string[];
    timeline: string;
  }[];
  testimonial?: {
    quote: string;
    author: string;
    position: string;
    company: string;
  };
  nextSteps?: string[];
}

export interface Props {
  caseStudy: CaseStudyData;
}

const { caseStudy } = Astro.props;

// Generate Case Study schema for SEO
const caseStudySchema = {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": `${caseStudy.title} - ${caseStudy.clientResults.keyOutcome}`,
  "description": caseStudy.description,
  "author": {
    "@type": "Organization",
    "name": "INT Creative",
    "url": "https://intcreative.co"
  },
  "publisher": {
    "@type": "Organization",
    "name": "INT Creative",
    "url": "https://intcreative.co"
  },
  "datePublished": caseStudy.completedDate,
  "articleSection": "Portfolio",
  "keywords": [caseStudy.category, ...caseStudy.technologies]
};

// Breadcrumb schema
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://intcreative.co"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Portfolio",
      "item": "https://intcreative.co/portfolio"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": caseStudy.title,
      "item": `https://intcreative.co/portfolio/${caseStudy.slug}`
    }
  ]
};

// Service type color mapping (matching their existing patterns)
const getServiceColor = (serviceType: string) => {
  const colors: Record<string, string> = {
    'website-development': 'from-forest-900 to-sage-800',
    'digital-marketing': 'from-sage-700 to-forest-800',
    'graphic-design': 'from-forest-800 to-sage-700',
    'marketing-automation': 'from-sage-800 to-forest-900'
  };
  return colors[serviceType] || 'from-forest-900 to-sage-800';
};
---

<BaseLayout 
  title={`${caseStudy.title} Case Study | INT Creative`}
  description={caseStudy.description}
>
  <script type="application/ld+json" set:html={JSON.stringify(caseStudySchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  
  <!-- Legal Disclaimer Banner -->
  <div class="bg-amber-100 border-b border-amber-200 py-3">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-center text-center">
        <svg class="w-5 h-5 text-amber-600 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
        <span class="text-sm font-medium text-amber-800">
          <strong>Demonstration Project:</strong> This case study is fictional and created for portfolio demonstration purposes. 
          <a href="#disclaimer" class="underline hover:no-underline">See full disclosure below.</a>
        </span>
      </div>
    </div>
  </div>
  
  <!-- Breadcrumbs -->
  <Breadcrumbs 
    items={[
      { label: 'Home', href: '/' },
      { label: 'Portfolio', href: '/portfolio' },
      { label: caseStudy.title, href: `/portfolio/${caseStudy.slug}` }
    ]}
  />

  <!-- Hero Section -->
  <section class={`pt-20 pb-16 bg-gradient-to-br ${getServiceColor(caseStudy.serviceType)} text-white relative overflow-hidden`}>
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent transform -skew-y-3"></div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Category Badge -->
        <div class="inline-block mb-4">
          <span class="bg-white/20 backdrop-blur-sm text-beige-50 px-4 py-2 rounded-full text-sm font-medium">
            {caseStudy.category} Demonstration
          </span>
        </div>
        
        <!-- Demonstration disclaimer -->
        <div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-lg p-4 mb-6 max-w-2xl mx-auto">
          <div class="flex items-center justify-center mb-2">
            <svg class="w-4 h-4 text-amber-200 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
            <span class="text-sm font-medium text-amber-100">Demonstration Project</span>
          </div>
          <p class="text-xs text-beige-100 text-center">
            This showcases my methodology using a realistic business scenario. Same process, same attention to detailâ€”applied to your specific goals.
          </p>
        </div>
        
        <h1 class="text-4xl md:text-5xl font-heading font-bold mb-4">
          {caseStudy.title}
        </h1>
        <p class="text-xl md:text-2xl font-medium text-beige-100 mb-6">
          {caseStudy.clientResults.keyOutcome}
        </p>
        <p class="text-lg text-beige-100 mb-8 max-w-3xl mx-auto">
          {caseStudy.description}
        </p>
        
        <!-- Key Result Highlight -->
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 max-w-2xl mx-auto">
          <div class="text-beige-200 text-sm font-medium mb-2">KEY RESULT</div>
          <div class="text-2xl md:text-3xl font-bold text-white mb-2">{caseStudy.clientResults.metric}</div>
          <div class="text-beige-100 text-sm">{caseStudy.clientResults.keyOutcome}</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Project Overview -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Client Info -->
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
          <h3 class="text-lg font-heading font-semibold text-forest-900 mb-4">Client Overview</h3>
          <dl class="space-y-3">
            <div>
              <dt class="text-sm font-medium text-gray-500">Company</dt>
              <dd class="text-sm text-gray-900">{caseStudy.clientInfo.name}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Industry</dt>
              <dd class="text-sm text-gray-900">{caseStudy.clientInfo.industry}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Size</dt>
              <dd class="text-sm text-gray-900">{caseStudy.clientInfo.size}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Location</dt>
              <dd class="text-sm text-gray-900">{caseStudy.clientInfo.location}</dd>
            </div>
          </dl>
        </div>
        
        <!-- Project Scope -->
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
          <h3 class="text-lg font-heading font-semibold text-forest-900 mb-4">Project Scope</h3>
          <dl class="space-y-3">
            <div>
              <dt class="text-sm font-medium text-gray-500">Duration</dt>
              <dd class="text-sm text-gray-900">{caseStudy.projectScope.duration}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Investment</dt>
              <dd class="text-sm text-gray-900">{caseStudy.projectScope.budget}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Team Size</dt>
              <dd class="text-sm text-gray-900">{caseStudy.projectScope.teamSize}</dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Completed</dt>
              <dd class="text-sm text-gray-900">{new Date(caseStudy.completedDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</dd>
            </div>
          </dl>
        </div>
        
        <!-- Technologies -->
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
          <h3 class="text-lg font-heading font-semibold text-forest-900 mb-4">Tools & Technologies</h3>
          <div class="space-y-2">
            {caseStudy.technologies.map((tech) => (
              <div class="flex items-center">
                <svg class="w-4 h-4 text-sage-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-sm text-gray-900">{tech}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Before/After Metrics -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-heading font-bold text-forest-900 mb-4">
          Measurable Results
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Every transformation is measured by real business outcomes. Here's how this project moved the needle.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {caseStudy.beforeAfterMetrics.map((metric) => (
          <div class="bg-gradient-to-br from-sage-50 to-beige-50 rounded-xl p-6 border border-sage-200 relative overflow-hidden group">
            <div class="absolute inset-0 bg-gradient-to-r from-sage-100/0 via-sage-200/20 to-sage-100/0 transform -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
            
            <div class="relative z-10">
              <h3 class="text-lg font-semibold text-forest-900 mb-4">{metric.metric}</h3>
              
              <!-- Before/After comparison -->
              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <span class="text-sm text-red-600 font-medium">Before</span>
                  <span class="text-lg font-bold text-red-700">{metric.before}</span>
                </div>
                
                <div class="flex items-center">
                  <div class="flex-1 h-2 bg-red-200 rounded-full overflow-hidden">
                    <div class="h-full bg-red-400 rounded-full" style="width: 30%"></div>
                  </div>
                  <svg class="w-4 h-4 text-sage-600 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                  </svg>
                  <div class="flex-1 h-2 bg-sage-200 rounded-full overflow-hidden">
                    <div class="h-full bg-sage-500 rounded-full" style="width: 85%"></div>
                  </div>
                </div>
                
                <div class="flex items-center justify-between">
                  <span class="text-sm text-sage-600 font-medium">After</span>
                  <span class="text-lg font-bold text-sage-700">{metric.after}</span>
                </div>
              </div>
              
              <!-- Improvement badge -->
              <div class="mt-4 text-center">
                <span class="inline-block bg-sage-600 text-white px-3 py-1 rounded-full text-sm font-medium">
                  {metric.improvement}
                </span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Challenge & Solution -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Challenges -->
        <div>
          <h2 class="text-2xl font-heading font-semibold text-forest-900 mb-6">
            The Challenge
          </h2>
          <div class="space-y-4">
            {caseStudy.challenges.map((challenge) => (
              <div class="flex items-start">
                <div class="w-6 h-6 bg-red-100 text-red-600 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                  </svg>
                </div>
                <p class="ml-3 text-gray-700">{challenge}</p>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Solutions -->
        <div>
          <h2 class="text-2xl font-heading font-semibold text-forest-900 mb-6">
            Our Solution
          </h2>
          <div class="space-y-4">
            {caseStudy.solutions.map((solution) => (
              <div class="flex items-start">
                <div class="w-6 h-6 bg-sage-100 text-sage-600 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <p class="ml-3 text-gray-700">{solution}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Process Steps -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-heading font-bold text-forest-900 mb-4">
          Implementation Process
        </h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Every successful transformation follows a proven process. Here's how we approached this project step by step.
        </p>
      </div>
      
      <div class="space-y-8">
        {caseStudy.processSteps.map((step, index) => (
          <div class="relative">
            <!-- Timeline connector -->
            {index < caseStudy.processSteps.length - 1 && (
              <div class="absolute left-6 top-16 w-0.5 h-16 bg-sage-200"></div>
            )}
            
            <div class="flex items-start">
              <!-- Step number -->
              <div class="w-12 h-12 bg-sage-600 text-white rounded-full flex items-center justify-center flex-shrink-0 font-bold relative z-10">
                {index + 1}
              </div>
              
              <!-- Step content -->
              <div class="ml-6 flex-1">
                <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
                  <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
                    <div>
                      <div class="text-sm text-sage-600 font-medium mb-1">{step.phase}</div>
                      <h3 class="text-xl font-semibold text-forest-900">{step.title}</h3>
                    </div>
                    <div class="mt-2 md:mt-0">
                      <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">
                        {step.timeline}
                      </span>
                    </div>
                  </div>
                  
                  <p class="text-gray-600 mb-4">{step.description}</p>
                  
                  <!-- Deliverables -->
                  <div>
                    <h4 class="text-sm font-medium text-gray-900 mb-2">Key Deliverables:</h4>
                    <ul class="space-y-1">
                      {step.deliverables.map((deliverable) => (
                        <li class="flex items-start text-sm text-gray-600">
                          <svg class="w-4 h-4 text-sage-600 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                          {deliverable}
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonial -->
  {caseStudy.testimonial && (
    <section class="py-16 bg-gradient-to-br from-sage-50 to-beige-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="relative">
          <!-- Fictional Testimonial Disclaimer -->
          <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-8">
            <div class="flex items-center justify-center text-amber-700 mb-2">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
              </svg>
              <span class="text-sm font-semibold">Fictional Testimonial</span>
            </div>
            <p class="text-xs text-amber-600">This testimonial is fictional and created for demonstration purposes only.</p>
          </div>
          
          <!-- Quote icon -->
          <div class="absolute -top-4 -left-4 text-sage-300">
            <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
            </svg>
          </div>
          
          <blockquote class="text-xl md:text-2xl font-medium text-forest-900 mb-6 relative z-10">
            "{caseStudy.testimonial.quote}"
          </blockquote>
          
          <div class="flex items-center justify-center">
            <div>
              <cite class="font-semibold text-forest-900 not-italic">
                {caseStudy.testimonial.author} (Fictional)
              </cite>
              <div class="text-sm text-gray-600">
                {caseStudy.testimonial.position}, {caseStudy.testimonial.company} (Fictional)
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Full Legal Disclaimer -->
  <section id="disclaimer" class="py-12 bg-gray-100 border-t border-gray-200">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-lg p-8 shadow-sm border border-gray-300">
        <h3 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
          <svg class="w-6 h-6 text-amber-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
          Legal Disclosure - Demonstration Project
        </h3>
        <div class="text-sm text-gray-700 space-y-3">
          <p><strong>This is a fictional case study created for demonstration purposes only.</strong></p>
          <ul class="list-disc pl-5 space-y-1">
            <li>All company names, client details, and contact information are fictional</li>
            <li>All testimonials and quotes are fictional and not from real clients</li>
            <li>All metrics, results, and outcomes are hypothetical examples</li>
            <li>No actual client relationships or projects are represented</li>
            <li>All timelines, budgets, and deliverables are conceptual illustrations</li>
          </ul>
          <p><strong>Purpose:</strong> This demonstration project illustrates INT Creative's planned methodology and approach to service business transformation. While based on realistic industry scenarios and proven strategies, it serves educational and marketing purposes only.</p>
          <p><strong>FTC Compliance:</strong> This content complies with Federal Trade Commission guidelines requiring clear disclosure of fictional content in business marketing materials.</p>
          <p><strong>No Earnings Claims:</strong> No guarantees of specific results are made. Individual results may vary based on various factors including market conditions, business factors, and implementation quality.</p>
          <p class="text-xs text-gray-500 mt-4">INT Creative is currently in pre-launch phase. These demonstration projects showcase our planned service delivery approach.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-gradient-to-br from-forest-900 to-sage-800 text-white relative overflow-hidden">
    <!-- Background effects matching ServicePageLayout -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/5 to-transparent transform -skew-y-3"></div>
    </div>
    
    <!-- Energy particles -->
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute top-1/4 left-8 w-1 h-1 bg-sage-400 rounded-full opacity-60 animate-pulse"></div>
      <div class="absolute top-1/2 right-12 w-0.5 h-0.5 bg-beige-200 rounded-full opacity-40 animate-pulse" style="animation-delay: 0.5s;"></div>
      <div class="absolute bottom-1/3 left-1/3 w-1 h-1 bg-sage-300 rounded-full opacity-50 animate-pulse" style="animation-delay: 1s;"></div>
    </div>
    
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
        Ready to Discuss Your Project?
      </h2>
      <p class="text-xl text-beige-100 mb-8">
        This demonstration shows our planned approach to service business transformation. Let's discuss how we can apply similar strategies to your specific challenges and goals.
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact"
          class="bg-sage-600 hover:bg-sage-700 text-white px-8 py-4 rounded-lg font-medium text-lg transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105 transform relative overflow-hidden group"
        >
          <span class="relative z-10">Start Your Project</span>
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent transform -translate-x-full group-hover:translate-x-full transition-transform duration-500"></div>
        </a>
        
        <a 
          href="/portfolio"
          class="bg-white/10 hover:bg-white/20 text-white px-8 py-4 rounded-lg font-medium text-lg transition-all duration-300 border border-white/20 hover:border-white/30"
        >
          View More Case Studies
        </a>
      </div>
      
      <p class="text-sm text-beige-200 mt-6">
