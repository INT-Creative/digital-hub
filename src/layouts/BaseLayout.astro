---
import Navigation from '../components/common/Navigation.astro';
import Footer from '../components/common/Footer.astro';
import '../styles/global.css';
import { generateOpenGraphTags } from '../config/social.ts';

export interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Service business transformation consultant specializing in website development, digital marketing automation, and professional branding for Northeast Ohio businesses. Fixed-fee consulting with measurable results.", image = "/images/og-image.jpg" } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const currentPath = Astro.url.pathname;

// Generate comprehensive Open Graph and social media meta tags
const socialMetaTags = generateOpenGraphTags(
  title,
  description,
  Astro.url.pathname,
  image,
  currentPath.includes('/blog/') ? 'article' : 'website'
);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Primary Meta Tags -->
    <title>{title} | INT Creative Hub</title>
    <meta name="title" content={`${title} | INT Creative Hub`} />
    <meta name="description" content={description} />
    
    <!-- Enhanced SEO Meta Tags -->
    <meta name="keywords" content="service business transformation, Northeast Ohio business consulting, website development Cleveland, digital marketing Akron, professional service business marketing, local business automation, fixed fee consulting" />
    <meta name="geo.region" content="US-OH" />
    <meta name="geo.placename" content="Northeast Ohio" />
    <meta name="geo.position" content="41.4993;-81.6944" />
    <meta name="ICBM" content="41.4993, -81.6944" />
    <meta name="DC.title" content={`${title} | INT Creative Hub`} />
    <meta name="DC.creator" content="Jacob Internicola" />
    <meta name="DC.subject" content="Service Business Transformation Consulting" />
    <meta name="DC.description" content={description} />
    <meta name="DC.publisher" content="INT Creative Hub" />
    <meta name="DC.type" content="Text" />
    <meta name="DC.format" content="text/html" />
    <meta name="DC.language" content="en-US" />
    
    <!-- Enhanced Open Graph and Social Media Meta Tags -->
    {Object.entries(socialMetaTags).map(([property, content]) => (
      property.startsWith('og:') || property.startsWith('article:') ? (
        <meta property={property} content={content} />
      ) : (
        <meta name={property} content={content} />
      )
    ))}
    
    <!-- Additional SEO and Social Meta -->
    <meta name="author" content="INT Creative LLC" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="theme-color" content="#1f2937" />
    
    <!-- Structured Data for Better Social Sharing -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "INT Creative Hub",
        "url": "https://intcreative.co",
        "logo": "https://intcreative.co/images/logo.svg",
        "description": "Professional marketing agency specializing in startup lead generation and growth strategies.",
        "sameAs": [
          "https://www.linkedin.com/in/jacobinternicola",
          "https://x.com/intcreative_co",
          "https://www.facebook.com/profile.php?id=6157779911205"
        ],
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "customer service",
          "email": "jake@intcreative.co"
        }
      }
    </script>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
    
    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />
  </head>
  <body class="font-sans antialiased bg-white text-gray-900">
    <Navigation currentPath={currentPath} />
    <main>
      <slot />
    </main>
    <Footer />
    
    <!-- Analytics -->
    <!-- Add Google Analytics or other tracking scripts here -->
  </body>
</html>